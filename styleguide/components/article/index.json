{
  "_wrapper": "/_wrapper.json",
  "_template": "/assets/templates/base/components/article",
  "sharing": {
    "_dataUrl": "/elements/social-share/share-monochrome.json"
  },
  "permalink": "/bsp-article/",
  "title": "{{words}}",
  "subTitle": "{{words}}",
  "metaData": {
    "_template": "/assets/templates/base/elements/meta-data",
    "publishDate": "05 Apr 2015",
    "authors": [
      {
        "_template": "/assets/templates/base/common/link",
        "_repeat": [
          1,
          5
        ],
        "body": "{{name}}",
        "attributes": {
          "_template": "/assets/templates/base/common/attributes",
          "href": "#",
          "title": "{{name}}"
        }
      }
    ]
  },
  "tags": {
    "_dataUrl": "/elements/tags/tag-list-no-title.json"
  },
  "lead": {
    "_template": "/assets/templates/base/common/figure",
    "credit": "{{name}}",
    "caption": {
      "_template": "/assets/templates/base/common/text",
      "text": "{{words}}"
    },
    "image": {
      "_template": "/assets/templates/base/common/image",
      "attributes": {
        "_template": "/assets/templates/base/common/attributes",
        "src": "{{image(1600, 600)}}"
      }
    }
  },
  "articleBody": [
    {
      "_template": "/assets/templates/base/common/html",
      "text": "{{paragraphs}}"
    },
    {
      "_template": "/assets/templates/base/components/article-enhancement",
      "content": {
        "_template": "/assets/templates/base/common/link",
        "cssClass": "related-link",
        "attributes": {
          "_template": "/assets/templates/base/common/attributes",
          "href": "#"
        },
        "body": {
          "_template": "/assets/templates/base/common/text",
          "text": "I am a related link as a separate paragraph (via CSS) inside the body of an article as an enhancement"
        }
      }
    },
    {
      "_template": "/assets/templates/base/common/html",
      "text": "{{paragraphs(2)}}"
    },
    {
      "_template": "/assets/templates/base/components/article-enhancement",
      "content": {
        "_template": "/assets/templates/base/elements/blockquote",
        "author": "{{name}}",
        "content": "{{sentences(2)}}"
      }
    },
    {
      "_template": "/assets/templates/base/common/html",
      "text": "{{paragraphs(2)}}"
    },
    {
      "_template": "/assets/templates/base/components/article-enhancement",

      "align": "center",

      "content": {
        "_template" : "/assets/templates/base/common/iframe",
        "contentAlign": "center",
        "contentWidth": "500",
        "hideMobile": true,

        "content" : "<blockquote class=\"twitter-tweet\" lang=\"en\"><p lang=\"en\" dir=\"ltr\">Same two guys, just different trophies. Congrats <a href=\"https://twitter.com/CMcCormickGolf\">@CMcCormickGolf</a> on winning 2015 <a href=\"https://twitter.com/pgaofamerica\">@pgaofamerica</a> Teacher of the Year!! <a href=\"http://t.co/CP80Tpno7K\">pic.twitter.com/CP80Tpno7K</a></p>&mdash; Jordan Spieth (@JordanSpieth) <a href=\"https://twitter.com/JordanSpieth/status/623962796938506240\">July 22, 2015</a></blockquote><script async src=\"//platform.twitter.com/widgets.js\" charset=\"utf-8\"></script>"
      }
    },
    {
      "_template": "/assets/templates/base/common/html",
      "text": "{{paragraphs(2)}}"
    },
    {
      "_template": "/assets/templates/base/components/article-enhancement",
      "content": {
        "_template": "/assets/templates/base/components/gallery-module-with-nav",
        "thumbnailsToShow": "4",
        "galleryTitle": {
          "_template": "/assets/templates/base/common/text",
          "text": "5 slides with thumbs"
        },
        "gallerySlides": [
          {
            "_template": "/assets/templates/base/common/image",
            "_repeat": 8,
            "attributes": {
              "_template": "/assets/templates/base/common/attributes",
              "src": "{{image(1200, 600)}}"
            }
          }
        ],
        "galleryNavItems": [
          {
            "_template": "/assets/templates/base/common/image",
            "_repeat": 8,
            "attributes": {
              "_template": "/assets/templates/base/common/attributes",
              "src": "{{image(250, 150)}}"
            }
          }
        ]
      }
    },
    {
      "_template": "/assets/templates/base/common/html",
      "text": "{{paragraphs}}"
    },
    {
      "_template": "/assets/templates/base/components/article-enhancement",
      "align": "left",
      "content": {
        "_template": "/assets/templates/base/common/image",
        "attributes": {
          "_template": "/assets/templates/base/common/attributes",
          "src": "{{image([ 200, 300, 10 ], [ 200, 300, 10 ])}}"
        }
      }
    },
    {
      "_template": "/assets/templates/base/common/html",
      "text": "{{paragraphs(3)}}"
    },
    {
      "_template": "/assets/templates/base/components/article-enhancement",
      "align": "center",
      "content": {
        "_template" : "/assets/templates/base/components/video-player",
        "youtube" : true,
        "src" : "https://www.youtube.com/embed/i3STjxcuk1Y"
      }
    },
    {
      "_template": "/assets/templates/base/common/html",
      "text": "{{paragraphs(2)}}"
    },
    {
      "_template": "/assets/templates/base/components/article-enhancement",
      "align": "right",
      "content": {
        "_template": "/assets/templates/base/common/figure",
        "credit": "{{name}}",
        "image": {
          "_template": "/assets/templates/base/common/image",
          "attributes": {
            "_template": "/assets/templates/base/common/attributes",
            "src": "{{image([ 200, 300, 10 ], [ 200, 300, 10 ])}}"
          }
        }
      }
    },
    {
      "_template": "/assets/templates/base/common/html",
      "text": "{{paragraphs(2)}}"
    }
  ]
}
