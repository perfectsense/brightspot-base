{
    "_template" : "/assets/templates/community/comment-list",

    "comments" : [
        {
            "_template" : "/assets/templates/community/comment",

            "_repeat" : 5,

            "extraAttributes": {
                "data-cid": "comment-id-goes-here-{{words(1)}}"
            },

            "avatar" : {
                "_template": "/assets/templates/base/common/image",
                "extraAttributes": {
                    "src": "{{image(42, 42)}}"
                }
            },
            "author" : "Ajax Load List - {{name}}",
            "date" : "05 Apr 2015",
            "commentBody" : [
                {
                    "_template" : "/assets/templates/base/common/text",
                    "text" : "{{words(30,80)}}"
                }
            ],
            "flag" : {
                "_template": "/assets/templates/base/common/link",
                "extraAttributes": {
                    "href": "#"
                },
                "body" : "Flag"
            },
            "share" : {
                "_template": "/assets/templates/base/common/link",
                "extraAttributes": {
                    "href": "#"
                },
                "body" : "Share"
            }
        }
    ]
}
