{

    "_template": "/assets/templates/base/components/gallery-full",

    "displayOptions" : {
        "modifierClass" : "component-inverse-color aspect-4x3",
        "thumbnails" : true
    },

    "heading": {
        "_template" : "/assets/templates/base/common/text",
        "text" : "{{words(10)}}"
    },

    "description" : {
        "_template" : "/assets/templates/base/common/text",
        "text" : "{{words(20)}}"
    },

    "slides": [
        {
            "_repeat" : 4,
            "_template" : "/assets/templates/base/components/gallery-full-slide-content",
            "image" : {
                "_template": "/assets/templates/base/common/image",
                "attributes": {
                    "_template": "/assets/templates/base/common/attributes",
                    "src": "{{image(1200, 900)}}"
                }
            },
            "thumbnail": {
                "_template": "/assets/templates/base/common/image",
                "attributes": {
                    "_template": "/assets/templates/base/common/attributes",
                    "src": "{{image(100, 100)}}"
                }
            },
            "caption" : [
                {
                    "_template": "/assets/templates/base/common/text",
                    "text" : "{{words(20)}}"
                }
            ]
        },
        {
            "_template" : "/assets/templates/base/components/gallery-full-slide-content",
            "image" : {
                "_template": "/assets/templates/base/common/image",
                "cssClass" : "image-portait",
                "attributes": {
                    "_template": "/assets/templates/base/common/attributes",
                    "src": "{{image(675, 900)}}"
                }
            },
            "thumbnail": {
                "_template": "/assets/templates/base/common/image",
                "attributes": {
                    "_template": "/assets/templates/base/common/attributes",
                    "src": "{{image(100, 100)}}"
                }
            },
            "caption" : [
                {
                    "_template": "/assets/templates/base/common/text",
                    "text" : "{{words(20)}}"
                }
            ]
        },
        {
            "_repeat" : 5,
            "_template" : "/assets/templates/base/components/gallery-full-slide-content",
            "image" : {
                "_template": "/assets/templates/base/common/image",
                "attributes": {
                    "_template": "/assets/templates/base/common/attributes",
                    "src": "{{image(1200, 900)}}"
                }
            },
            "thumbnail": {
                "_template": "/assets/templates/base/common/image",
                "attributes": {
                    "_template": "/assets/templates/base/common/attributes",
                    "src": "{{image(100, 100)}}"
                }
            },
            "caption" : [
                {
                    "_template": "/assets/templates/base/common/text",
                    "text" : "{{words(20)}}"
                }
            ]
        }
    ],

    "tags" : {
        "_dataUrl" : "/elements/tags/tag-list.json"
    },

    "sharing" : {
        "_dataUrl" : "/elements/social-share/share-monochrome.json"
    }
}
