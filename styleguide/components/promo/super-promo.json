{
    "_wrapper": "/common/_layout-embed.json",
    "_template" : "/assets/templates/base/components/promo",

    "modifierClass" : "promo-super",

    "listItems" : [
        {
            "_template": "/assets/templates/base/components/promo-item",

            "sections" : [
                {

                    "_template" : "/assets/templates/base/components/promo-section",

                    "type" : "image",

                    "image" : {

                        "_template" : "/assets/templates/base/common/link",

                        "attributes" : {
                            "_template" : "/assets/templates/base/common/attributes",
                            "href"  : "link"
                        },

                        "body" : {

                            "_template" : "/assets/templates/base/common/image",

                            "attributes" : {
                                "_template" : "/assets/templates/base/common/attributes",
                                "alt" : "{{words([ 1, 2 ])}}",
                                "src" : "{{image(1600, 400)}}"
                            }
                        }
                    }
                },
                {

                    "_template" : "/assets/templates/base/components/promo-section",

                    "type" : "text",

                    "title" : {
                        "_template" : "/assets/templates/base/common/link",

                        "attributes" : {
                            "_template" : "/assets/templates/base/common/attributes",
                            "href"  : "#"
                        },

                        "body" : {
                            "_template" : "/assets/templates/base/common/text",
                            "text" : "{{words([ 1, 2 ])}}"
                        }
                    },

                    "description" : {
                        "_template" : "/assets/templates/base/common/text",

                        "text" : "{{words(10)}}"
                    },

                    "links" : [{
                        "_template" : "/assets/templates/base/common/link",

                        "_repeat" : 3,

                        "attributes" : {
                            "_template" : "/assets/templates/base/common/attributes",
                            "href"  : "#"
                        },

                        "body" : {
                            "_template" : "/assets/templates/base/common/text",
                            "text" : "{{words([ 1, 2 ])}}"
                        }
                    }]

                }

            ]
        }
    ]
}
