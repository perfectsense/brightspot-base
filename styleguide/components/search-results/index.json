{
    "_wrapper": "/_wrapper.json",

    "_template" : "/assets/templates/base/components/search-results",

    "options" : {
      "loadMore" : true
    },

    "heading" : {
        "_template" : "/assets/templates/base/components/component-group",

        "components" : [
            {
                "_template" : "/assets/templates/base/common/text",
                "text" : "{{words(5)}}"
            },
            {
                "_template" : "/assets/templates/base/common/text",
                "modifierClass" : "search-term",
                "text" : "\"{{words(1)}}\""
            }
        ],

        "searchResultsSort" : {
            "_template": "/assets/templates/base/common/form",

            "modifierClass": "search-results-sort",

            "attributes" : {
                "_template": "/assets/templates/base/common/attributes",
                "action" : ""
            },

            "inputs" : [
                {

                    "_template" : "/assets/templates/base/common/form-select",

                    "autoSubmit" : true,

                    "attributes": {
                      "_template" : "/assets/templates/base/common/attributes",
                      "id": "search-results-sort"
                    },

                    "labelAttributes" : {
                        "_template": "/assets/templates/base/common/attributes",
                        "for": "search-results-sort"
                    },

                    "labelText" : {
                        "_template" : "/assets/templates/base/common/text",
                        "text": "Sort by:"
                    },

                    "optionsData": [
                      {
                        "_template" : "/assets/templates/base/common/form-select-option",

                        "_repeat" : 3,

                        "attributes": {
                          "_template": "/assets/templates/base/common/attributes",
                          "value": "{{words(1)}}"
                        },
                        "text": {
                          "_template": "/assets/templates/base/common/text",
                          "text" : "{{words(1)}}"
                        }
                      }
                    ]
                }
            ]
        }
    },

    "searchResults" : {
      "_template" : "/assets/templates/base/components/promo",

      "modifierClass" : "promo-small",

      "horizontalSplit" : "third",

      "listItems" : [
          {
              "_template": "/assets/templates/base/components/promo-item",

              "_repeat" : 9,

              "sections" : [
                  {

                      "_template" : "/assets/templates/base/components/promo-section",

                      "type" : "tags",

                      "tags" : {

                          "_template": "/assets/templates/base/elements/tags",
                          "tagList": [
                              {
                                  "_template": "/assets/templates/base/common/link",
                                  "attributes": {
                                      "href": "#",
                                      "_template": "/assets/templates/base/common/attributes"
                                  },
                                  "body": {
                                      "_template": "/assets/templates/base/common/text",
                                      "text": "{{words(2)}}"
                                  }
                              }
                          ]
                      }
                  },
                  {

                      "_template" : "/assets/templates/base/components/promo-section",

                      "type" : "image",

                      "image" : {

                          "_template" : "/assets/templates/base/common/link",

                          "attributes" : {
                              "_template" : "/assets/templates/base/common/attributes",
                              "href"  : "link"
                          },

                          "body" : {

                              "_template" : "/assets/templates/base/common/image",

                              "attributes" : {
                                  "_template" : "/assets/templates/base/common/attributes",
                                  "alt" : "{{words([ 1, 2 ])}}",
                                  "src" : "{{image(800, 450)}}"
                              }
                          }
                      }
                  },
                  {

                      "_template" : "/assets/templates/base/components/promo-section",

                      "type" : "text",

                      "title" : {
                          "_template" : "/assets/templates/base/common/link",

                          "attributes" : {
                              "_template" : "/assets/templates/base/common/attributes",
                              "href"  : "#"
                          },

                          "body" : {
                              "_template" : "/assets/templates/base/common/text",
                              "text" : "{{words([ 1, 2 ])}}"
                          }
                      },

                      "description" : {
                          "_template" : "/assets/templates/base/common/text",

                          "text" : "{{words(10)}}"
                      }

                  }

              ]
          }
      ],

      "cta": {
          "_template": "/assets/templates/base/components/component-cta",

          "options" : {
            "loadMore" : true,
            "location" : "bottom"
          },
          "content": {
              "_template": "/assets/templates/base/common/link",
              "attributes": {
                  "href": "index",
                  "_template": "/assets/templates/base/common/attributes",
                  "data-ajax-link-target" : ".search-results"
              },
              "body": {
                  "_template": "/assets/templates/base/common/text",
                  "text": "{{words(2)}}"
              }
          }
      }
  }

}
