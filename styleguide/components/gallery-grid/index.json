{
  
  "_template": "/assets/templates/base/components/gallery-grid",

  "heading": {
    "_template": "/assets/templates/base/common/text",
    "text": "Gallery Grid"
  },

  "description" : {
    "_template": "/assets/templates/base/common/text",
    "text": "{{words(40)}}"
  },

  "grid" : [
    {
      "_template": "/assets/templates/base/components/gallery-grid-column",

      "rows" : [
        {
          "_template": "/assets/templates/base/common/image",
          "_repeat" : 2,
          "attributes": {
            "_template": "/assets/templates/base/common/attributes",
            "src": "{{image(800,600)}}"
          }
        }
      ]
    },
    {
      "_template": "/assets/templates/base/components/gallery-grid-column",

      "rows" : [
        {
          "_template": "/assets/templates/base/common/image",
          "attributes": {
            "_template": "/assets/templates/base/common/attributes",
            "src": "{{image(600,800)}}"
          }
        }
      ]
    },
    {
      "_template": "/assets/templates/base/components/gallery-grid-column",

      "rows" : [
        {
          "_template": "/assets/templates/base/common/image",
          "_repeat" : 2,
          "attributes": {
            "_template": "/assets/templates/base/common/attributes",
            "src": "{{image(800,600)}}"
          }
        }
      ]
    }

  ],

  "gallery" : {
    "_template": "/assets/templates/base/components/gallery-module",

    "gallerySlides": [
      {
        "_template": "/assets/templates/base/components/gallery-module-slide-content",
        "_repeat": 7,
        "content": {
          "_template": "/assets/templates/base/common/image",
          "attributes": {
            "_template": "/assets/templates/base/common/attributes",
            "src": "{{image(800, 450)}}"
          }
        }
      }
    ]
  }

}
