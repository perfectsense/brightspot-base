{


  "_template": "/assets/templates/base/components/photofall",

  "sharing": {
    "_dataUrl": "/elements/social-share/share-monochrome.json"
  },

  "permalink": "/bsp-article/",
  "title": "{{words}}",
  "subTitle": "{{words}}",
  "metaData": {
    "_template": "/assets/templates/base/elements/meta-data",
    "publishDate": "05 Apr 2015",
    "authors": [
      {
        "_template": "/assets/templates/base/common/link",
        "_repeat": [
          1,
          5
        ],
        "body": "{{name}}",
        "extraAttributes": {

          "href": "#",
          "title": "{{name}}"
        }
      }
    ]
  },
  "tags": {
    "_dataUrl": "/elements/tags/tag-list-no-title.json"
  },
  "lead": {
    "_template": "/assets/templates/base/common/figure",
    "credit": "{{name}}",
    "caption": {
      "_template": "/assets/templates/base/common/text",
      "text": "{{words}}"
    },
    "image": {
      "_template": "/assets/templates/base/common/image",
      "extraAttributes": {

        "src": "{{image(1600, 600)}}"
      }
    }
  },

  "photofallBody": [
    {
      "_template": "/assets/templates/base/common/html",
      "text": "{{paragraphs(1)}}"
    }
  ],

  "photofallItems" : [
    {

        "_template" : "/assets/templates/base/components/promo",

        "displayOptions" : {
            "modifierClass" : "promo-75-25"
        },

        "listItems" : [
            {
                "_template": "/assets/templates/base/components/promo-item",

                "_repeat" : 5,

                "sections" : [
                    {

                        "_template" : "/assets/templates/base/components/promo-section",

                        "type" : "image",

                        "image" : {

                            "_template" : "/assets/templates/base/common/link",

                            "extraAttributes" : {
                                "_template" : "/assets/templates/base/common/attributes",
                                "data-bsp-modal-open" : "fullscreen",
                                "href"  : "#image2"
                            },

                            "body" : {

                                "_template" : "/assets/templates/base/common/image",

                                "extraAttributes" : {
                                    "_template" : "/assets/templates/base/common/attributes",
                                    "alt" : "{{words([ 1, 2 ])}}",
                                    "src" : "{{image(800, 450)}}"
                                }
                            }
                        }
                    },
                    {

                        "_template" : "/assets/templates/base/components/promo-section",

                        "type" : "text",

                        "description" : {
                            "_template" : "/assets/templates/base/common/text",
                            "text" : "{{words(20,40)}}"
                        }

                    }

                ]
            }
        ]
    }
  ],

  "modalGallery" : {

      "_template": "/assets/templates/base/elements/modal",

      "id": "fullscreen",

      "content": {
        "_template": "/assets/templates/base/components/gallery-full",

        "displayOptions" : {
            "modifierClass" : "component-inverse-color ratio-16x9",
            "thumbnails" : true
        },

        "heading": {
            "_template" : "/assets/templates/base/common/text",
            "text" : "{{words(10)}}"
        },

        "description" : {
            "_template" : "/assets/templates/base/common/text",
            "text" : "{{words(20)}}"
        },

        "slides": [
            {
                "_repeat" : 5,
                "_template" : "/assets/templates/base/components/gallery-full-slide-content",
                "image" : {
                    "_template": "/assets/templates/base/common/image",
                    "extraAttributes": {

                        "src": "{{image(1600, 900)}}"
                    }
                },
                "thumbnail": {
                    "_template": "/assets/templates/base/common/image",
                    "extraAttributes": {

                        "src": "{{image(100, 100)}}"
                    }
                },
                "caption" : [
                    {
                        "_template": "/assets/templates/base/common/text",
                        "text" : "{{words(20)}}"
                    }
                ]
            }
        ],

        "sharing" : {
            "_dataUrl" : "/elements/social-share/share-monochrome.json"
        }
      }

  }
}
