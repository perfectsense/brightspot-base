{
  "_template": "components/bsp-table",
  "options": {
    "textAlignment": "left-aligned",
    "verticalAlignment": "top-aligned",
    "fullWidth": true,
    "fixedColWidth": false,
    "verticalStripes": false,
    "horizontalStripes": false,
    "sort": true
  },
  "title": {
    "_template": "common/text",
    "text": "table with sortable columns"
  },
  "headings": [
    [
      {
        "_template": "common/link",
        "cssClass": "asc",
        "attributes": {
          "href": ".",
          "data-sort-by": "alpha",
          "data-column-index": "0",
          "_template": "common/attributes"
        },
        "body": {
          "_template": "common/text",
          "text": "String"
        }
      }
    ],
    [
      {
        "_template": "common/link",
        "attributes": {
          "href": ".",
          "data-sort-by": "numeric",
          "data-column-index": "1",
          "_template": "common/attributes"
        },
        "body": {
          "_template": "common/text",
          "text": "Number"
        }
      }
    ],
    [
      {
        "_template": "common/link",
        "attributes": {
          "href": ".",
          "data-sort-by": "date",
          "data-column-index": "2",
          "_template": "common/attributes"
        },
        "body": {
          "_template": "common/text",
          "text": "Date"
        }
      }
    ]
  ],
  "rows": [
    {
      "row": [
        [
          {
            "_template": "common/text",
            "text": "Aardvark",
            "options": {
              "modifierClass": "data-value"
            }
          }
        ],
        [
          {
            "_template": "common/text",
            "text": "3",
            "options": {
              "modifierClass": "data-value"
            }
          }
        ],
        [
          {
            "_template": "common/text",
            "text": "1/1/1999",
            "options": {
              "modifierClass": "data-value"
            }
          }
        ]
      ]
    },
    {
      "row": [
        [
          {
            "_template": "common/text",
            "text": "Bear",
            "options": {
              "modifierClass": "data-value"
            }
          }
        ],
        [
          {
            "_template": "common/text",
            "text": "2",
            "options": {
              "modifierClass": "data-value"
            }
          }
        ],
        [
          {
            "_template": "common/text",
            "text": "1/3/1999",
            "options": {
              "modifierClass": "data-value"
            }
          }
        ]
      ]
    },
    {
      "row": [
        [
          {
            "_template": "common/text",
            "text": "Cat",
            "options": {
              "modifierClass": "data-value"
            }
          }
        ],
        [
          {
            "_template": "common/text",
            "text": "1",
            "options": {
              "modifierClass": "data-value"
            }
          }
        ],
        [
          {
            "_template": "common/text",
            "text": "1/2/1999",
            "options": {
              "modifierClass": "data-value"
            }
          }
        ]
      ]
    }
  ]
}
