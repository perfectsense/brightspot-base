{
  
  "_template": "/assets/templates/base/components/gallery-module",

  "displayOptions" : {
      "horizontalSlides": true,
      "slidesToShowMedium": 7,
      "slidesToShowSmall": 4,
      "slidesToScrollMedium": 7,
      "slidesToScrollSmall": 4,
      "theme": "horizontal"
  },

  "heading": {
    "_template" : "/assets/templates/base/components/component-group",

        "components" : [
            {
                "_template" : "/assets/templates/base/common/link",

                "attributes" : {
                    "_template" : "/assets/templates/base/common/attributes",
                    "href"  : "link"
                },

                "body" : {
                    "_template" : "/assets/templates/base/common/text",
                    "text" : "{{words(5)}}"
                }
            },
            {

                "_template" : "/assets/templates/base/common/text",

                "modifierClass" : "component-subtitle",

                "text" : "{{words(20)}}"

            }
        ]
  },
  "gallerySlides": [
    {
      "_template": "/assets/templates/base/components/gallery-module-slide-content",
      "_repeat": 7,
      "content": {
        "_template": "/assets/templates/base/common/image",
        "attributes": {
          "_template": "/assets/templates/base/common/attributes",
          "src": "{{image(200, 200)}}"
        }
      }
    }
  ]
}
