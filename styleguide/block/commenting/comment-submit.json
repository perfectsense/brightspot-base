{
  "_template": "base/CommentEntry",
  "user": {
    "_template": "base/Author",
    "image": {
      "_template": "base/util/Image",
      "src": "{{image(50, 50)}}"
    }
  },
  "headline": "{{name}}",
  "subheadline": {
    "_template": "base/util/Link",
    "href": "#",
    "body": "Logout"
  },
  "input": {
    "_template": "base/util/TextArea",
    "value": "",
    "placeholder": "Comment",
    "maxlength": 500,
    "characterCountdown": {
        "_template": "base/util/RawHtml",
        "html": "characters remaining"
    }
  },
  "actions": {
    "_template": "base/util/Concatenated",
    "items": [
      {
        "_template": "base/CommentSubmitButton",
        "ajaxTarget": "_ajax-submit-response.json",
        "link": {
          "_template": "base/util/Link",
          "body": "Post",
          "href": "#"
        }
      }
    ]
  }
}
