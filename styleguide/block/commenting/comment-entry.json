{
  "_template": "base/commenting/CommentEntry",
  "replaceWithResponse": false,
  "user": {
    "_template": "base/Author",
    "image": {
      "_template": "base/util/Image",
      "src": "{{image(50, 50)}}"
    }
  },
  "headline": "{{name}}",
  "subheadline": {
    "_template": "base/util/Link",
    "href": "#",
    "body": "Logout"
  },
  "input": {
    "_template": "base/util/TextArea",
    "value": "",
    "placeholder": "Comment",
    "maxlength": 500,
    "characterCountdown": {
      "_template": "base/util/RawHtml",
      "html": "characters remaining"
    }
  },
  "validation": {
    "_template": "base/commenting/CommentEntryValidation",
    "serverErrorMessage": {
      "_template": "base/util/RawHtml",
      "html": "Sorry! Something went wrong on our end. Please try again later."
    },
    "commentIsBlankMessage": {
      "_template": "base/util/RawHtml",
      "html": "Please provide a comment."
    },
    "commentIsTooLongMessage": {
      "_template": "base/util/RawHtml",
      "html": "Your comment was too long. Please stay within 500 characters."
    }
  },
  "actions": {
    "_template": "base/util/Concatenated",
    "items": [
      {
        "_template": "base/commenting/CommentSubmit",
        "ajaxTarget": "your-ajax-url-here",
        "button": "Post"
      }
    ]
  }
}
