{
  "_template": "CommentEntry.hbs",

  "user": {
    "_template": "../author/Author.hbs",
    "image": {
      "_template": "../util/Image.hbs",
      "src": "{{image(50, 50)}}"
    }
  },

  "title": "{{name}}",

  "logout": {
    "_template": "../user/UserSignOut.hbs",
    "button": "Logout",
    "action": "/block/user/_logout-response",
    "target": "_blank"
  },

  "input": {
    "_template": "../../form/input/TextAreaInput.hbs",
    "name": "entry-input",
    "id": "34dvpcoxiv34ktgj",
    "required": true,
    "placeholder": "Comment",
    "maxlength": 500,
    "characterCountdown": "characters remaining"
  },

  "validation": {
    "_template": "../../form/validation/ValidationMessages.hbs",
    "serverError": {
      "_template": "../util/RawHtml.hbs",
      "html": "Sorry! Something went wrong on our end. Please try again later."
    },
    "blank": {
      "_template": "../util/RawHtml.hbs",
      "html": "Please provide a comment."
    },
    "tooLong": {
      "_template": "../util/RawHtml.hbs",
      "html": "Your comment was too long. Please stay within 500 characters."
    }
  },

  "submitButton": "Post",
  "submitAction": "/block/commenting/_response-with-comment"
}
