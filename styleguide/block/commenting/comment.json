{
    "_template": "base/Comment",
    "isStaff": false,
    "author": {
        "_dataUrl": "/block/author/author.json"
    },
    "time": {
        "_template": "base/util/DateTime",
        "iso": "{{date('iso')}}",
        "body": "{{date()}}"
    },
    "body": {
        "_template": "base/util/RawHtml",
        "html": "{{paragraphs(1)}}"
    },
    "footer": {
        "_template": "base/util/Concatenated",
        "items": [
            {
                "_template": "base/CommentReplyButton",
                "ajaxTarget": "/ajax/replyComment",
                "link": {
                    "_template": "base/util/Link",
                    "body": "Reply",
                    "href": "#"
                }
            }
        ]
    },
    "replies": {
        "_template": "base/util/Concatenated",
        "items": [
            {
                "_repeat": [1,3],
                "_dataUrl": "/block/commenting/_base-replies.json"
            }
        ]
    }
}
