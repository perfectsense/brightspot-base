{
  "_template": "community/commenting/Comment",

  "author": {
    "_dataUrl": "/block/author/author.json"
  },

  "time": {
    "_template": "base/util/DateTime",
    "iso": "{{date('iso')}}",
    "body": "{{date()}}"
  },

  "body": {
    "_template": "base/util/RawHtml",
    "html": "{{paragraphs(1)}}"
  },

  "replyButton": "reply",
  "replyAction": "/block/commenting/_comment-entry-response",

  "flagButton": "flag",
  "flagAction": "/block/commenting/flag"
}
