{
  "_template": "Comment.hbs",

  "author": {
    "_dataUrl": "../author/author.json"
  },

  "time": {
    "_template": "../util/DateTime.hbs",
    "iso": "{{date('iso')}}",
    "body": "{{date()}}"
  },

  "body": {
    "_template": "../util/RawHtml.hbs",
    "html": "{{paragraphs(1)}}"
  },

  "replies": [ ],

  "validation": {
    "_template": "../../form/validation/ValidationMessages.hbs",
    "serverError": {
      "_template": "../util/RawHtml.hbs",
      "html": "Sorry! Something went wrong on our end. Please try again later."
    }
  },

  "replyButton": "reply",
  "replyAction": "/block/commenting/_response-with-comment-entry"
}
