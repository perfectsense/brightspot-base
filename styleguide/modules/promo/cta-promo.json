{

    "_template" : "/assets/base/promo",

    "displayOptions" : {
        "horizontalSplit" : "half",
        "modifierClass" : "promo-call-to-action"
    },

    "heading" : {
        "_template" : "/assets/base/globals/text",

        "text" : "Call to Action Promo"
    },

    "listItems" : [
        {
            "_template": "/assets/base/promo-item",

            "sections" : [
                {

                    "_template" : "/assets/base/promo-section",

                    "type" : "image",

                    "image" : {

                        "_template" : "/assets/base/globals/link",

                        "extraAttributes" : {
                            "_template" : "/assets/base/globals/attributes",
                            "href"  : "link"
                        },

                        "body" : {

                            "_template" : "/assets/base/globals/image",

                            "extraAttributes" : {
                                "_template" : "/assets/base/globals/attributes",
                                "alt" : "{{words([ 1, 2 ])}}",
                                "src" : "{{image(564, 288)}}"
                            }
                        }
                    }
                }
            ]
        },
        {
           "_template": "/assets/base/promo-item",

           "sections" : [
              {

                "_template" : "/assets/base/promo-section",

                "links" : [{
                  "_template" : "/assets/base/globals/link",

                  "_repeat" : 5,

                  "extraAttributes" : {
                      "_template" : "/assets/base/globals/attributes",
                      "href"  : "#"
                  },

                  "body" : {
                      "_template" : "/assets/base/globals/text",
                      "text" : "{{words([2, 10 ])}}"
                  }
                }]
              }
          ]
       }
    ]
}
