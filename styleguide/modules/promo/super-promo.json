{

    "_template" : "/assets/base/promo",

    "displayOptions" : {
        "modifierClass" : "promo-super color-inverse"
    },

    "listItems" : [
        {
            "_template": "/assets/base/promo-item",

            "sections" : [
                {

                    "_template" : "/assets/base/promo-section",

                    "type" : "image",

                    "image" : {

                        "_template" : "/assets/base/globals/link",

                        "extraAttributes" : {
                            "_template" : "/assets/base/globals/attributes",
                            "href"  : "link"
                        },

                        "body" : {

                            "_template" : "/assets/base/globals/image",

                            "extraAttributes" : {
                                "_template" : "/assets/base/globals/attributes",
                                "alt" : "{{words([ 1, 2 ])}}",
                                "src" : "{{image(1600, 600)}}"
                            }
                        }
                    }
                },
                {

                    "_template" : "/assets/base/promo-section",

                    "type" : "tags",

                    "tags" : {

                        "_template": "/assets/base/Tags",
                        "tagList": [
                            {
                                "_template": "/assets/base/globals/link",
                                "extraAttributes": {
                                    "href": "#",
                                    "_template": "/assets/base/globals/attributes"
                                },
                                "body": {
                                    "_template": "/assets/base/globals/text",
                                    "text": "{{words(2)}}"
                                }
                            }
                        ]
                    }
                },
                {

                    "_template" : "/assets/base/promo-section",

                    "type" : "text",

                    "title" : {
                        "_template" : "/assets/base/globals/link",

                        "extraAttributes" : {
                            "_template" : "/assets/base/globals/attributes",
                            "href"  : "#"
                        },

                        "body" : {
                            "_template" : "/assets/base/globals/text",
                            "text" : "Super Promo Super Promo Super Promo"
                        }
                    },

                    "description" : {
                        "_template" : "/assets/base/globals/text",

                        "text" : "{{words(10)}}"
                    },

                    "links" : [{
                        "_template" : "/assets/base/globals/link",

                        "_repeat" : 3,

                        "extraAttributes" : {
                            "_template" : "/assets/base/globals/attributes",
                            "href"  : "#"
                        },

                        "body" : {
                            "_template" : "/assets/base/globals/text",
                            "text" : "{{words([ 1, 2 ])}}"
                        }
                    }]

                }

            ]
        }
    ]
}
