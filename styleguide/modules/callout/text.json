    "sections" : [
        {
            "_template" : "/assets/templates/base/modules/component-group",

            "components" : [
                {
                  "_template" : "/assets/templates/base/common/text",
                  "text" : "{{words(4)}}"
                },
                {
                  "_template" : "/assets/templates/base/common/text",
