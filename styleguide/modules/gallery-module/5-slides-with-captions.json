{

  "_template": "/assets/base/gallery-module",
  "heading": {
    "_template": "/assets/base/globals/text",
    "text": "5 slides, with captions"
  },
  "gallerySlides": {
      "_template": "/assets/base/gallery-module-slide-content",

      "content": [{

        "_template": "/assets/base/globals/image",

        "_repeat": 7,

        "displayOptions" : {
          "metadata" : true
        },

        "credit" : {
          "_template" : "/assets/base/globals/text",
            "text" : "{{words(4)}}"
        },

        "caption" : {
            "_template" : "/assets/base/globals/text",
            "text" : "{{words(20)}}"
        },

        "extraAttributes": {

          "src": "{{image([ 600, 1200, 100 ], 400)}}"
        }
      }]
    }

}
