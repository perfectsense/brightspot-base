{


  "_template": "/assets/templates/base/modules/article",

  "sharing": {
    "_dataUrl": "/elements/social-share/share.json"
  },

  "permalink": "/bsp-article/",
  "title": "{{words}}",
  "subTitle": "{{words}}",
  "metaData": {
    "_template": "/assets/templates/base/elements/meta-data",
    "publishDate": "05 Apr 2015",
    "authors": [
      {
        "_template": "/assets/templates/base/common/link",
        "_repeat": [
          1,
          5
        ],
        "body": "{{name}}",
        "extraAttributes": {

          "href": "#",
          "title": "{{name}}"
        }
      }
    ]
  },
  "tags": {
    "_dataUrl": "/elements/tags/tag-list-no-title.json"
  },
  "lead": {
    "_template": "/assets/templates/base/common/figure",
    "credit": "{{name}}",
    "caption": {
      "_template": "/assets/templates/base/common/text",
      "text": "{{words}}"
    },
    "image": {
      "_template": "/assets/templates/base/common/image",
      "extraAttributes": {

        "src": "{{image(1600, 600)}}"
      }
    }
  },
  "articleBody": [
    {
      "_template": "/assets/templates/base/common/html",
      "text": "{{paragraphs(2)}}"
    },
    {
      "_template": "/assets/templates/base/modules/article-enhancement",
      "content": {
        "_dataUrl" : "/modules/gallery-grid/index.json"
      }
    },
    {
      "_template": "/assets/templates/base/common/html",
      "text": "{{paragraphs(2)}}"
    },
    {
      "_template": "/assets/templates/base/modules/article-enhancement",
      "content": {
        "_template": "/assets/templates/base/common/link",
        "cssClass": "related-link",
        "extraAttributes": {

          "href": "#"
        },
        "body": {
          "_template": "/assets/templates/base/common/text",
          "text": "I am a related link as a separate paragraph (via CSS) inside the body of an article as an enhancement"
        }
      }
    },
    {
      "_template": "/assets/templates/base/common/html",
      "text": "{{paragraphs(2)}}"
    },
    {
      "_template": "/assets/templates/base/modules/article-enhancement",
      "content": {
        "_template": "/assets/templates/base/elements/blockquote",
        "author": "{{name}}",
        "content": "{{sentences(2)}}"
      }
    },
    {
      "_template": "/assets/templates/base/common/html",
      "text": "{{paragraphs(2)}}"
    },
    {
      "_template": "/assets/templates/base/modules/article-enhancement",

      "displayOptions" : {
        "align": "center"
      },

      "content": {
        "_template" : "/assets/templates/base/common/iframe",
        "contentAlign": "center",
        "contentWidth": "500",
        "hideMobile": true,

        "content" : "<blockquote class=\"twitter-tweet\" lang=\"en\"><p lang=\"en\" dir=\"ltr\">Same two guys, just different trophies. Congrats <a href=\"https://twitter.com/CMcCormickGolf\">@CMcCormickGolf</a> on winning 2015 <a href=\"https://twitter.com/pgaofamerica\">@pgaofamerica</a> Teacher of the Year!! <a href=\"http://t.co/CP80Tpno7K\">pic.twitter.com/CP80Tpno7K</a></p>&mdash; Jordan Spieth (@JordanSpieth) <a href=\"https://twitter.com/JordanSpieth/status/623962796938506240\">July 22, 2015</a></blockquote><script async src=\"//platform.twitter.com/widgets.js\" charset=\"utf-8\"></script>"
      }
    },
    {
      "_template": "/assets/templates/base/common/html",
      "text": "{{paragraphs(2)}}"
    },
    {
      "_template": "/assets/templates/base/modules/article-enhancement",
      "content": {
        "_dataUrl" : "/modules/gallery-module/7-slides-horizontal.json"
      }
    },
    {
      "_template": "/assets/templates/base/common/html",
      "text": "{{paragraphs}}"
    },
    {
      "_template": "/assets/templates/base/modules/article-enhancement",
      "displayOptions" : {
        "align": "left"
      },
      "content": {
        "_template" : "/assets/templates/base/common/link",

        "extraAttributes" : {
            "_template" : "/assets/templates/base/common/attributes",
            "data-bsp-modal-open" : "gallery-fullscreen",
            "href"  : "#slide-1"
        },

        "body" : {
            "_template": "/assets/templates/base/common/figure",
            "credit": "{{name}}",
            "image": {
              "_template": "/assets/templates/base/common/image",
              "extraAttributes": {

                "src": "{{image([ 200, 300, 10 ], [ 200, 300, 10 ])}}"
              }
            }
        }
      }
    },
    {
      "_template": "/assets/templates/base/common/html",
      "text": "{{paragraphs(3)}}"
    },
    {
      "_template": "/assets/templates/base/modules/article-enhancement",
      "displayOptions" : {
        "align": "center"
      },
      "content": {
        "_template" : "/assets/templates/base/modules/video-player",
        "youtube" : true,
        "src" : "https://www.youtube.com/embed/i3STjxcuk1Y"
      }
    },
    {
      "_template": "/assets/templates/base/common/html",
      "text": "{{paragraphs(2)}}"
    },
    {
      "_template": "/assets/templates/base/modules/article-enhancement",
      "displayOptions" : {
        "align": "right"
      },
      "content": {
        "_template" : "/assets/templates/base/common/link",

        "extraAttributes" : {
            "_template" : "/assets/templates/base/common/attributes",
            "data-bsp-modal-open" : "gallery-fullscreen",
            "href"  : "#slide-2"
        },

        "body" : {
            "_template": "/assets/templates/base/common/figure",
            "credit": "{{name}}",
            "image": {
              "_template": "/assets/templates/base/common/image",
              "extraAttributes": {

                "src": "{{image([ 200, 300, 10 ], [ 200, 300, 10 ])}}"
              }
            }
        }
      }
    },
    {
        "_template": "/assets/templates/base/elements/modal",

          "id": "gallery-fullscreen",

          "content": {
            "_template": "/assets/templates/base/modules/gallery-full",

            "displayOptions" : {
                "modifierClass" : "module-inverse-color ratio-16x9",
                "thumbnails" : true
            },

            "heading": {
                "_template" : "/assets/templates/base/common/text",
                "text" : "{{words(10)}}"
            },

            "description" : {
                "_template" : "/assets/templates/base/common/text",
                "text" : "{{words(20)}}"
            },

            "slides": [
                {
                    "_template" : "/assets/templates/base/modules/gallery-full-slide-content",

                    "_repeat" : 2,

                    "image" : {
                        "_template": "/assets/templates/base/common/image",
                        "extraAttributes": {

                            "src": "{{image(1600, 900)}}"
                        }
                    },
                    "caption" : [
                        {
                            "_template": "/assets/templates/base/common/text",
                            "text" : "{{words(20)}}"
                        }
                    ],
                    "sharing" : {
                        "_dataUrl" : "/elements/social-share/share.json"
                    }
                }
            ],

            "showMoreText" : {
                "_template": "/assets/templates/base/common/text",
                "text" : "Show More"
            },

            "showLessText" : {
                "_template": "/assets/templates/base/common/text",
                "text" : "Show Less"
            }


          }
    },
    {
      "_template": "/assets/templates/base/common/html",
      "text": "{{paragraphs(2)}}"
    }
  ]
}
