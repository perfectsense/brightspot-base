{
  "_wrapper" : false,

  "_template": "/assets/base/globals/page",

  "head" : {
    "_dataUrl": "/common/head.json"
  },

  "body" : {
    "_template": "/assets/base/globals/body",

    "displayOptions" : {
        "modifierClass" : "color-inverse"
    },

    "headerView": {
      "_dataUrl": "/modules/site-header-simple/index.json"
    },

    "mainView": {
      "_template": "/assets/base/layouts/OneColumn",
      "main": [
        {
             "_template": "/assets/base/photofall",

              "sharing": {
                "_dataUrl": "/modules/social-share/share.json"
              },

              "permalink": "/bsp-article/",
              "title": "{{words}}",
              "subTitle": "{{words}}",
              "metaData": {
                "_template": "/assets/base/meta-data",
                "publishDate": "05 Apr 2015",
                "authors": [
                  {
                    "_template": "/assets/base/globals/link",
                    "_repeat": [
                      1,
                      5
                    ],
                    "body": "{{name}}",
                    "extraAttributes": {

                      "href": "#",
                      "title": "{{name}}"
                    }
                  }
                ]
              },
              "tags": {
                "_dataUrl": "/modules/tags/tag-list-no-title.json"
              },
              "lead": {
                "_template": "/assets/base/globals/figure",
                "credit": "{{name}}",
                "caption": {
                  "_template": "/assets/base/globals/text",
                  "text": "{{words}}"
                },
                "image": {
                  "_template": "/assets/base/globals/image",
                  "extraAttributes": {

                    "src": "{{image(1600, 600)}}"
                  }
                }
              },

              "photofallBody": [
                {
                  "_template": "/assets/base/globals/html",
                  "text": "{{paragraphs(1)}}"
                }
              ],

              "photofallItems" : [
                {

                    "_template" : "/assets/base/promo",

                    "displayOptions" : {
                        "modifierClass" : "promo-75-25"
                    },

                    "listItems" : [
                        {
                            "_template": "/assets/base/promo-item",

                            "sections" : [
                                {

                                    "_template" : "/assets/base/promo-section",

                                    "type" : "image",

                                    "image" : {

                                        "_template" : "/assets/base/globals/link",

                                        "extraAttributes" : {
                                            "data-bsp-modal-open" : "gallery-fullscreen",
                                            "href"  : "#slide-1"
                                        },

                                        "body" : {

                                            "_template" : "/assets/base/globals/image",

                                            "extraAttributes" : {
                                                "alt" : "{{words([ 1, 2 ])}}",
                                                "src" : "{{image(800, 450)}}"
                                            }
                                        }
                                    }
                                },
                                {

                                    "_template" : "/assets/base/promo-section",

                                    "type" : "text",

                                    "description" : {
                                        "_template" : "/assets/base/globals/text",
                                        "text" : "{{words(20,40)}}"
                                    }

                                }

                            ]
                        },
                        {
                            "_template": "/assets/base/promo-item",

                            "sections" : [
                                {

                                    "_template" : "/assets/base/promo-section",

                                    "type" : "image",

                                    "image" : {

                                        "_template" : "/assets/base/globals/link",

                                        "extraAttributes" : {
                                            "data-bsp-modal-open" : "gallery-fullscreen",
                                            "href"  : "#slide-2"
                                        },

                                        "body" : {

                                            "_template" : "/assets/base/globals/image",

                                            "extraAttributes" : {
                                                "alt" : "{{words([ 1, 2 ])}}",
                                                "src" : "{{image(800, 450)}}"
                                            }
                                        }
                                    }
                                },
                                {

                                    "_template" : "/assets/base/promo-section",

                                    "type" : "text",

                                    "description" : {
                                        "_template" : "/assets/base/globals/text",
                                        "text" : "{{words(20,40)}}"
                                    }

                                }

                            ]
                        },
                        {
                            "_template": "/assets/base/promo-item",

                            "sections" : [
                                {

                                    "_template" : "/assets/base/promo-section",

                                    "type" : "image",

                                    "image" : {

                                        "_template" : "/assets/base/globals/link",

                                        "extraAttributes" : {
                                            "_template" : "/assets/base/globals/attributes",
                                            "data-bsp-modal-open" : "gallery-fullscreen",
                                            "href"  : "#slide-3"
                                        },

                                        "body" : {

                                            "_template" : "/assets/base/globals/image",

                                            "extraAttributes" : {
                                                "_template" : "/assets/base/globals/attributes",
                                                "alt" : "{{words([ 1, 2 ])}}",
                                                "src" : "{{image(800, 450)}}"
                                            }
                                        }
                                    }
                                },
                                {

                                    "_template" : "/assets/base/promo-section",

                                    "type" : "text",

                                    "description" : {
                                        "_template" : "/assets/base/globals/text",
                                        "text" : "{{words(20,40)}}"
                                    }

                                }

                            ]
                        }
                    ]
                }
              ],

              "modalGallery" : {

                  "_template": "/assets/base/modal",

                  "id": "gallery-fullscreen",

                  "content": {
                    "_template": "/assets/base/gallery-full",

                    "displayOptions" : {
                        "modifierClass" : "color-inverse",
                        "thumbnails" : false
                    },

                    "heading": {
                        "_template" : "/assets/base/globals/text",
                        "text" : "{{words(10)}}"
                    },

                    "description" : {
                        "_template" : "/assets/base/globals/text",
                        "text" : "{{words(20)}}"
                    },

                    "slides": [
                        {
                            "_repeat" : 3,
                            "_template" : "/assets/base/gallery-full-slide-content",
                            "image" : {
                                "_template": "/assets/base/globals/image",
                                "extraAttributes": {

                                    "src": "{{image(1600, 900)}}"
                                }
                            },
                            "caption" : [
                                {
                                    "_template": "/assets/base/globals/text",
                                    "text" : "{{words(80)}}"
                                }
                            ],
                            "sharing" : {
                                "_dataUrl" : "/modules/social-share/share.json"
                            }
                        }
                    ],

                    "showMoreText" : {
                        "_template": "/assets/base/globals/text",
                        "text" : "Show More"
                    },

                    "showLessText" : {
                        "_template": "/assets/base/globals/text",
                        "text" : "Show Less"
                    }
                  }

              }
            }
      ]
    },

    "footerView": {
      "_dataUrl": "/modules/site-footer-simple/index.json"
    }
  }
}
