{
  "_wrapper" : false,

  "_template": "/assets/base/globals/page",

  "head" : {
    "_dataUrl": "/common/head.json"
  },

  "body" : {
    "_template": "/assets/base/globals/body",

    "headerView": {
      "_dataUrl": "/modules/site-header-simple/index.json"
    },

    "mainView": {
      "_template": "/assets/base/ModuleGroup",

      "modules": [
        {
          "_dataUrl": "/modules/page-title/page-title.json"
        },
        {
          "_template": "/assets/base/layouts/FullPage",

          "main" : [
            {
              "_dataUrl" : "/modules/promo/super-promo-no-bullets.json"
            }
          ]
        },
        {
          "_template": "/assets/base/layouts/OneColumn",

          "main" : [
            {
              "_template" : "/assets/base/promo",

              "loadMore" : true,

              "displayOptions" : {
                "horizontalSplit" : "third",
                "modifierClass" : "promo-small tag-results"
                },

              "listItems" : [
                  {
                      "_template": "/assets/base/promo-item",

                      "_repeat" : 6,

                      "sections" : [
                          {

                              "_template" : "/assets/base/promo-section",

                              "type" : "image",

                              "image" : {

                                  "_template" : "/assets/base/globals/link",

                                  "extraAttributes" : {
                                      "href"  : "link"
                                  },

                                  "body" : {

                                      "_template" : "/assets/base/globals/image",

                                      "extraAttributes" : {
                                          "alt" : "{{words([ 1, 2 ])}}",
                                          "src" : "{{image(800, 450)}}"
                                      }
                                  }
                              }
                          },
                          {

                              "_template" : "/assets/base/promo-section",

                              "type" : "text",

                              "title" : {
                                  "_template" : "/assets/base/globals/link",

                                  "extraAttributes" : {
                                      "href"  : "#"
                                  },

                                  "body" : {
                                      "_template" : "/assets/base/globals/text",
                                      "text" : "{{words([ 1, 2 ])}}"
                                  }
                              },

                              "description" : {
                                  "_template" : "/assets/base/globals/text",

                                  "text" : "{{words(10)}}"
                              }

                          }

                      ]
                  }
              ],

              "cta": {
                  "_template": "/assets/base/globals/link",

                  "cssClass" : "load-more",

                  "extraAttributes": {
                      "href": "index",
                      "data-ajax-link-target" : ".tag-results"
                  },

                  "body": {
                      "_template": "/assets/base/globals/text",
                      "text": "{{words(2)}}"
                  }
              }
            }

          ]
        }
      ]
    },

    "footerView": {
      "_dataUrl": "/modules/site-footer-simple/index.json"
    }
  }
}
