{
    "_wrapper": false,

    "_template": "/assets/templates/base/common/page",

    "head": {
        "_dataUrl": "/common/head.json"
    },

    "body": {
        "_template": "/assets/templates/base/common/body",
        "displayOptions": {
            "modifierClass": "article-page"
        },
        "headerView": {
            "_dataUrl": "/components/site-header-simple/index.json"
        },
        "mainView": {
            "_template": "/assets/templates/base/layouts/full-page",
            "main": [{
                    "_template": "/assets/templates/base/components/article",

                    "sharing": {
                        "_dataUrl": "/elements/social-share/share.json"
                    },

                    "permalink": "/bsp-article/",
                    "title": "{{words}}",
                    "subTitle": "{{words}}",
                    "metaData": {
                        "_template": "/assets/templates/base/elements/meta-data",
                        "publishDate": "05 Apr 2015",
                        "authors": [{
                            "_template": "/assets/templates/base/common/link",
                            "_repeat": [
                                1,
                                5
                            ],
                            "body": "{{name}}",
                            "extraAttributes": {

                                "href": "#",
                                "title": "{{name}}"
                            }
                        }]
                    },
                    "tags": {
                        "_dataUrl": "/elements/tags/tag-list-no-title.json"
                    },
                    "lead": {
                        "_template": "/assets/templates/base/common/figure",
                        "credit": "{{name}}",
                        "caption": {
                            "_template": "/assets/templates/base/common/text",
                            "text": "{{words}}"
                        },
                        "image": {
                            "_template": "/assets/templates/base/common/image",
                            "extraAttributes": {

                                "src": "{{image(1600, 600)}}"
                            }
                        }
                    },
                    "articleBody": [{
                        "_template": "/assets/templates/base/common/html",
                        "text": "{{paragraphs(2)}}"
                    }, {
                        "_template": "/assets/templates/base/common/html",
                        "text": "{{paragraphs(2)}}"
                    }, {
                        "_template": "/assets/templates/community/commenting",

                        "commentTitle": "Comment",
                        "commentCount": "5",
                        "signInText": "Sign in to post a comment",
                        "signInChoices": [
                            {
                                "_template": "/assets/templates/base/common/link",
                                "cssClass" : "icon-facebook",
                                "extraAttributes": {
                                    "href": "#"
                                }
                            },
                            {
                                "_template": "/assets/templates/base/common/link",
                                "cssClass" : "icon-twitter",
                                "extraAttributes": {
                                    "href": "#"
                                }
                            },
                            {
                                "_template": "/assets/templates/base/common/link",
                                "cssClass" : "icon-google",
                                "extraAttributes": {
                                    "href": "#"
                                }
                            },
                            {
                                "_template": "/assets/templates/base/common/link",
                                "cssClass" : "icon-linkedin",
                                "extraAttributes": {
                                    "href": "#"
                                }
                            }
                        ]
                    }]
                }

            ]
        },
        "footerView": {
            "_dataUrl": "/components/site-footer-simple/index.json"
        }
    }
}
