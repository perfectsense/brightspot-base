{
  "_wrapper" : false,

  "_template": "/assets/base/globals/page",

  "head" : {
    "_dataUrl": "/common/head.json"
  },

  "body" : {
    "_template": "/assets/base/globals/body",
    "displayOptions" : {
        "modifierClass": "article-page"
    },
    "headerView": {
      "_dataUrl": "/modules/site-header-simple/index.json"
    },
    "mainView": {
      "_template": "/assets/base/layouts/FullPage",
      "main": [
        {


          "_template": "/assets/base/article",

          "sharing": {
            "_dataUrl": "/modules/social-share/share.json"
          },

          "permalink": "/bsp-article/",
          "title": "{{words}}",
          "subTitle": "{{words}}",
          "metaData": {
            "_template": "/assets/base/meta-data",
            "publishDate": "05 Apr 2015",
            "authors": [
              {
                "_template": "/assets/base/globals/link",
                "_repeat": [
                  1,
                  5
                ],
                "body": "{{name}}",
                "extraAttributes": {

                  "href": "#",
                  "title": "{{name}}"
                }
              }
            ]
          },
          "tags": {
            "_dataUrl": "/modules/tags/tag-list-no-title.json"
          },
          "lead": {
            "_template": "/assets/base/globals/figure",
            "credit": "{{name}}",
            "caption": {
              "_template": "/assets/base/globals/text",
              "text": "{{words}}"
            },
            "image": {
              "_template": "/assets/base/globals/image",
              "extraAttributes": {

                "src": "{{image(1600, 600)}}"
              }
            }
          },
          "articleBody": [
            {
              "_template": "/assets/base/globals/html",
              "text": "{{paragraphs(2)}}"
            },
            {
              "_template": "/assets/base/article-enhancement",
              "content": {
                "_dataUrl" : "/modules/gallery-grid/index.json"
              }
            },
            {
              "_template": "/assets/base/globals/html",
              "text": "{{paragraphs(2)}}"
            },
            {
              "_template": "/assets/base/article-enhancement",
              "content": {
                "_template": "/assets/base/globals/link",
                "cssClass": "related-link",
                "extraAttributes": {

                  "href": "#"
                },
                "body": {
                  "_template": "/assets/base/globals/text",
                  "text": "I am a related link as a separate paragraph (via CSS) inside the body of an article as an enhancement"
                }
              }
            },
            {
              "_template": "/assets/base/globals/html",
              "text": "{{paragraphs(2)}}"
            },
            {
              "_template": "/assets/base/article-enhancement",
              "content": {
                "_template": "/assets/base/blockquote",
                "author": "{{name}}",
                "content": "{{sentences(2)}}"
              }
            },
            {
              "_template": "/assets/base/globals/html",
              "text": "{{paragraphs(2)}}"
            },
            {
              "_template": "/assets/base/article-enhancement",

              "displayOptions" : {
                "align": "center"
              },

              "content": {
                "_template" : "/assets/base/globals/iframe",
                "contentAlign": "center",
                "contentWidth": "500",
                "hideMobile": true,

                "content" : "<blockquote class=\"twitter-tweet\" lang=\"en\"><p lang=\"en\" dir=\"ltr\">Same two guys, just different trophies. Congrats <a href=\"https://twitter.com/CMcCormickGolf\">@CMcCormickGolf</a> on winning 2015 <a href=\"https://twitter.com/pgaofamerica\">@pgaofamerica</a> Teacher of the Year!! <a href=\"http://t.co/CP80Tpno7K\">pic.twitter.com/CP80Tpno7K</a></p>&mdash; Jordan Spieth (@JordanSpieth) <a href=\"https://twitter.com/JordanSpieth/status/623962796938506240\">July 22, 2015</a></blockquote><script async src=\"//platform.twitter.com/widgets.js\" charset=\"utf-8\"></script>"
              }
            },
            {
              "_template": "/assets/base/globals/html",
              "text": "{{paragraphs(2)}}"
            },
            {
              "_template": "/assets/base/article-enhancement",
              "content": {
                "_dataUrl" : "/modules/gallery-module/7-slides-horizontal.json"
              }
            },
            {
              "_template": "/assets/base/globals/html",
              "text": "{{paragraphs}}"
            },
            {
              "_template": "/assets/base/article-enhancement",
              "displayOptions" : {
                "align": "left"
              },
              "content": {
                "_template" : "/assets/base/globals/link",

                "extraAttributes" : {
                    "_template" : "/assets/base/globals/attributes",
                    "data-bsp-modal-open" : "gallery-fullscreen",
                    "href"  : "#slide-1"
                },

                "body" : {
                    "_template": "/assets/base/globals/figure",
                    "credit": "{{name}}",
                    "image": {
                      "_template": "/assets/base/globals/image",
                      "extraAttributes": {

                        "src": "{{image([ 200, 300, 10 ], [ 200, 300, 10 ])}}"
                      }
                    }
                }
              }
            },
            {
              "_template": "/assets/base/globals/html",
              "text": "{{paragraphs(3)}}"
            },
            {
              "_template": "/assets/base/article-enhancement",
              "displayOptions" : {
                "align": "center"
              },
              "content": {
                "_template" : "/assets/base/video-player",
                "youtube" : true,
                "src" : "https://www.youtube.com/embed/i3STjxcuk1Y"
              }
            },
            {
              "_template": "/assets/base/globals/html",
              "text": "{{paragraphs(2)}}"
            },
            {
              "_template": "/assets/base/article-enhancement",
              "displayOptions" : {
                "align": "right"
              },
              "content": {
                "_template" : "/assets/base/globals/link",

                "extraAttributes" : {
                    "_template" : "/assets/base/globals/attributes",
                    "data-bsp-modal-open" : "gallery-fullscreen",
                    "href"  : "#slide-2"
                },

                "body" : {
                    "_template": "/assets/base/globals/figure",
                    "credit": "{{name}}",
                    "image": {
                      "_template": "/assets/base/globals/image",
                      "extraAttributes": {

                        "src": "{{image([ 200, 300, 10 ], [ 200, 300, 10 ])}}"
                      }
                    }
                }
              }
            },
            {
                "_template": "/assets/base/modal",

                  "id": "gallery-fullscreen",

                  "content": {
                    "_template": "/assets/base/gallery/gallery-full",

                    "displayOptions" : {
                        "modifierClass" : "color-inverse ratio-16x9",
                        "thumbnails" : true
                    },

                    "heading": {
                        "_template" : "/assets/base/globals/text",
                        "text" : "{{words(10)}}"
                    },

                    "description" : {
                        "_template" : "/assets/base/globals/text",
                        "text" : "{{words(20)}}"
                    },

                    "slides": [
                        {
                            "_template" : "/assets/base/gallery/gallery-full-slide-content",

                            "_repeat" : 2,

                            "image" : {
                                "_template": "/assets/base/globals/image",
                                "extraAttributes": {

                                    "src": "{{image(1600, 900)}}"
                                }
                            },
                            "caption" : [
                                {
                                    "_template": "/assets/base/globals/text",
                                    "text" : "{{words(20)}}"
                                }
                            ],
                            "sharing" : {
                                "_dataUrl" : "/modules/social-share/share.json"
                            }
                        }
                    ],

                    "showMoreText" : {
                        "_template": "/assets/base/globals/text",
                        "text" : "Show More"
                    },

                    "showLessText" : {
                        "_template": "/assets/base/globals/text",
                        "text" : "Show Less"
                    }


                  }
            },
            {
              "_template": "/assets/base/globals/html",
              "text": "{{paragraphs(2)}}"
            }
          ]
        }

      ]
    },
    "footerView": {
      "_dataUrl": "/modules/site-footer-simple/index.json"
    }
  }
}
