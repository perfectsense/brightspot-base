{
  "_wrapper": false,
  "_template": "/assets/base/globals/page",
  "head": {
    "_dataUrl": "/common/head.json"
  },
  "body": {
    "_template": "/assets/base/globals/body",
    "displayOptions": {
      "modifierClass": "article-page"
    },
    "headerView": {
      "_dataUrl": "/modules/site-header-simple/index.json"
    },
    "mainView": {
      "_template": "/assets/base/layouts/FullPage",
      "main": [
        {
          "_template": "/assets/base/Article2",
          "canonicalUrl": "http://site.com/articlepage",
          "image": "{{image(200,200)}}",
          "breadcrumbs": [
              {
                  "_template": "/assets/base/globals/text",
                  "_repeat": "4",
                  "title": "{{words(3)}}"
              }
          ],
          "slug": "{{words([4,8])}}",
          "headline": "{{words([4,8])}}",
          "subHeadline": "{{sentences(3,4)}}",
          "tags": {
              "_template": "/assets/base/Tags",
              "tagList": [
                  {
                    "_template": "/assets/base/globals/link",
                    "_repeat": [3,8],
                    "body": "{{words([ 1, 2 ])}}",
                    "extraAttributes": {
                        "href": "#"
                    }
                  }
              ]
          },
          "author": {
              "_template": "/assets/base/Author",
              "image": "{{image(50,50)}}",
              "name": "{{name}}",
              "publishDate": "{{words(2)}}",
              "affiliation": "Acme"
          },
          "datePublished": "Jan 13, 2016",
          "datePublishedISO": "2016-01-13T01:11:11+01:00"
        }
      ]
    },
    "footerView": {
      "_dataUrl": "/modules/site-footer-simple/index.json"
    }
  }
}
