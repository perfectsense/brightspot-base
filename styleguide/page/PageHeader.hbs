{{#defineBlock "PageHeader"}}

    {{#defineElement "logo"}}
        <div class="{{elementName}}">{{this}}</div>
    {{/defineElement}}

    {{#defineElement "hat"}}
        <div class="{{elementName}}">{{this}}</div>
    {{/defineElement}}

    {{#defineElement "navigation"}}
        <div class="{{elementName}}">{{this}}</div>
    {{/defineElement}}

    {{#defineElement "search"}}
        <div class="{{elementName}}">{{this}}</div>
    {{/defineElement}}

    {{#defineBlockContainer}}
        <header class="{{blockName}}" itemscope itemtype="http://schema.org/WPHeader"{{extraAttributes}}>
            {{#defineBlockBody}}
                {{element "logo"}}
                {{element "hat"}}                
                {{element "navigation"}}
                {{element "search"}}
            {{/defineBlockBody}}
        </header>
    {{/defineBlockContainer}}
{{/defineBlock}}
