{{#defineBlock "VideoPlayerPromo" extend="../promo/Promo.hbs"}}

    {{#defineBlockContainer}}

        <div class="{{blockName}}"
            {{#with url}}data-ajax-url="{{this}}"{{/with}}
            {{#with active}}data-active{{/with}}
            {{extraAttributes}}>
            {{#defineBlockBody}}
                {{element "title"}}
                {{element "media"}}
                {{element "description"}}
            {{/defineBlockBody}}
        </div>

    {{/defineBlockContainer}}
{{/defineBlock}}
