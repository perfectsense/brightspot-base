{{#defineBlock "YouTubeVideoPlayer"}}

    {{#defineElement "screen" noWith=true}}
        <div class="{{elementName}}" data-aspect-ratio="{{#if aspectRatio}}{{aspectRatio}}{{else}}4x3{{/if}}">
            <iframe id="{{id}}"
                type="text/html"
                width="640"
                height="390"
                src="https://www.youtube.com/embed/{{videoId}}?enablejsapi=1"
                frameborder="0"></iframe>
        </div>
    {{/defineElement}}

    {{#defineBlockContainer}}
        <div class="{{blockName}}"
            itemprop="video" itemscope itemtype="http://schema.org/VideoObject"
            {{#with videoId}}data-video-id="{{this}}"{{/with}}
            {{#if seekSeconds}}data-seek-seconds="{{seekSeconds}}"{{/if}}
            {{#if muted}}data-muted{{/if}}
            {{#if autoplay}}data-autoplay{{/if}}
            {{extraAttributes}}>
            {{#defineBlockBody}}
                {{element "screen"}}
            {{/defineBlockBody}}
        </div>
    {{/defineBlockContainer}}

{{/defineBlock}}
