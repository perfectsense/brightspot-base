{{#defineBlock "OpenGraphImageMeta"}}

    {{! Required Elements }}

    {{#defineElement "url"}}
        <meta property="og:image" content="{{this}}" />
    {{/defineElement}}

    {{! Optional Elements }}

    {{#defineElement "secureUrl"}}
        <meta property="og:image:secure_url" content="{{this}}" />
    {{/defineElement}}

    {{#defineElement "type"}}
        <meta property="og:image:type" content="{{this}}" />
    {{/defineElement}}

    {{#defineElement "width"}}
        <meta property="og:image:width" content="{{this}}" />
    {{/defineElement}}

    {{#defineElement "height"}}
        <meta property="og:image:height" content="{{this}}" />
    {{/defineElement}}

    {{#defineBlockBody}}
        {{element "url"}}
        {{element "secureUrl"}}
        {{element "type"}}
        {{element "width"}}
        {{element "height"}}
    {{/defineBlockBody}}
{{/defineBlock}}