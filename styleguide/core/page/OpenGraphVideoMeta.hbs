{{#block "OpenGraphVideoMeta"}}
    {{#blockBody}}
        {{! Required Elements }}

        {{#element "url"}}
            <meta property="og:video" content="{{this}}" />
        {{/element}}

        {{! Optional Elements }}

        {{#element "secureUrl"}}
            <meta property="og:video:secure_url" content="{{this}}" />
        {{/element}}

        {{#element "type"}}
            <meta property="og:video:type" content="{{this}}" />
        {{/element}}

        {{#element "width"}}
            <meta property="og:video:width" content="{{this}}" />
        {{/element}}

        {{#element "height"}}
            <meta property="og:video:height" content="{{this}}" />
        {{/element}}
    {{/blockBody}}
{{/block}}
