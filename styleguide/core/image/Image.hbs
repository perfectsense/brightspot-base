{{#defineBlock "Image"}}

    {{#defineElement "image" noWith=true}}
        <img class="{{elementName}}" src="{{src}}" alt="{{alt}}"{{#with srcset}} srcset="{{this}}"{{/with}}{{#with width}} width="{{this}}"{{/with}}{{#with height}} height="{{this}}"{{/with}} />
    {{/defineElement}}

    {{#defineBlockContainer}}

        <div class="{{blockName}}">
            {{#defineBlockBody}}
                {{element "image"}}
            {{/defineBlockBody}}
        </div>

    {{/defineBlockContainer}}
{{/defineBlock}}
