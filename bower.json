{
  "name": "brightspot-base",
  "version": "3.0.0",
  "homepage": "https://github.com/perfectsense/brightspot-base",
  "dependencies": {
    "bsp-utils": "perfectsense/brightspot-js-utils#^3.1.0",
    "jquery": "^2.1.4",
    "normalize-css": "necolas/normalize.css#^3.0.3"
  },
  "main": "src/main/webapp/main.js",
  "ignore": [
    "**/.*",
    "node_modules",
    "bower_components",
    "test",
    "tests"
  ],
  "brightspot-library-files": [
    "src/main/webapp/scripts/config.js",
    "src/main/webapp/scripts/main.js",
    "src/main/webapp/styles/main.less"
  ],
  "brightspot-copy-overrides": {
    "brightspot-base": [
      {
        "cwd": "src/main/webapp",
        "src": "base/**",
        "dest": "",
        "expand": true
      },
      {
        "cwd": "src/main/webapp",
        "src": "community/**",
        "dest": "",
        "expand": true
      }
    ],
    "normalize-css": [
        {
            "src": "normalize.css",
            "dest": "bower/normalize-css/normalize.css"
        }
    ]
  }
}
