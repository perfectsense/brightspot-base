<div class="bsp-component {{#if options.fixedPosition}}bsp-component-fixed{{/if}}">
	<div class="bsp-list-promo">
		<div class="bsp-list-promo-title">{{title}}</div>
		<ul class="bsp-list-promo-list {{#if options.hardcodeItemHeights}}hard-item-heights{{/if}}">
			{{#listItems}}
				<li><a href="{{link}}">{{text}}</a></li>
			{{/listItems}}
		</ul>
		<div class="bsp-list-promo-cta">
			<a href="{{ctaLink}}">{{ctaText}}</a>
		</div>		
	</div>
</div>