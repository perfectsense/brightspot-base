<div class="bsp-component bsp-image-promo-component{{#if modifierClass}} {{modifierClass}}{{/if}}">
	{{#if heading}}
		<div class="bsp-component-title">{{heading}}</div>
	{{/if}}

	<div class="bsp-component-content">

		<div class="bsp-image-promo">

		{{#if horizontalSplit}}
			<div class="bsp-row">
		{{/if}}

			{{#each images}}

				<div class="bsp-column-{{../horizontalSplit}}">

					<div class="bsp-image-promo-image {{#if rolloverImage}}with-rollover{{else}}{{#if rolloverText}}with-rollover{{/if}}{{/if}}">

						{{#with image}}
							{{render this}}
						{{/with}}

						{{#with rolloverImage}}
							{{render this cssClass="bsp-image-promo-rollover-image"}}
						{{/with}}

						{{#with rolloverText}}
							{{render this cssClass="bsp-image-promo-rollover-text"}}
						{{/with}}

						<ul class="bsp-image-promo-links">
							{{#each promoLinks}}
								<li>{{render this}}</li>
							{{/each}}
						</ul>
					</div>

				</div>

			{{/each}}

		{{#if horizontalSplit}}
			</div>
		{{/if}}

		</div>

	</div>

	{{#with cta}}
        {{render this}}
	{{/with}}
</div>
