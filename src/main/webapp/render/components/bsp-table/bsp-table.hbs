<div class="bsp-component bsp-table-component{{#with options.modifierClass}} {{this}}{{/with}}">
	{{#if title}}
		<h3 class="bsp-component-title">{{render this.title}}</h1>
	{{/if}}

	<div class="bsp-component-content">

		<div class="bsp-table-wrapper">
			<table class="bsp-table{{#with options}}{{#if this.textAlignment}} {{this.textAlignment}}{{/if}}{{#if this.fullWidth}} full-width{{/if}}{{#if this.fixedColWidth}} fixed-col-width{{/if}}{{#if this.verticalAlignment}} {{this.verticalAlignment}}{{/if}}{{#if this.verticalStripes}} vertical-stripes{{/if}}{{#if this.horizontalStripes}} horizontal-stripes{{/if}}{{#if this.theme}} {{this.theme}}{{/if}}{{/with}}">
				{{#if headings}}
					<thead>
						{{#each headings}}
							<th class="col-{{@index}}">
								{{#each this}}
									{{render this}}
								{{/each}}	
							</th>
						{{/each}}
					</thead>
				{{/if}}
				<tbody>
					{{#each rows}}
						<tr class="row-{{@index}}">
							{{#each row}}
								<td class="col-{{@index}}">
									{{#each this}}
										{{render this}}
									{{/each}}						
								</td>
							{{/each}}
						</tr>
					{{/each}}			
				</tbody>
					
			</table>
		</div>

	</div>

	{{#with cta}}
		<div class="bsp-component-cta {{#if options.location}}cta-{{options.location}}{{/if}}">
			{{render content}}
		</div>	
	{{/with}}

</div>

