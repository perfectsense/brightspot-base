{{!-- Forms do not seem like they can be/should be generic, so this contains an example --}}
<style>
.error {
	color: red;
}
h2 {
	border-bottom: 1px #000 solid;
}
label {
	display: block;
	margin-top: 10px;
}
</style>
<form action="" method="GET" data-bsp-form>

<h2>inputs</h2>

<p>(skipping types: button, file, hidden, image)</p>

<h3>type: checkbox</h3>
{{> common/input inputs.checkbox1 }}

<h3>type: color</h3>
{{> common/input inputs.color1 }}

<h3>type: date</h3>
{{> common/input inputs.date1 }}

<h3>type: datetime</h3>
<p>(not supported in any major browsers now, reverts to acting like textfield)</p>
{{> common/input inputs.datetime1 }}

<h3>type: datetime-local</h3>
{{> common/input inputs.datetimelocal1 }}

<h3>type: email</h3>
{{> common/input inputs.email1 }}

<h3>type: month</h3>
{{> common/input inputs.month1 }}

<h3>type: number</h3>
{{> common/input inputs.number1 }}

<h3>type: password</h3>
<p>(with custom bsp-form-constraint-matches constraint)</p>
{{> common/input inputs.password1 }}
{{> common/input inputs.password2 }}

<h3>type: radio</h3>
<p>to be implemented</p>

<h3>type: range</h3>
<p>to be implemented</p>

<h3>type: search</h3>
{{> common/input inputs.search1 }}

<h3>type: tel</h3>
{{> common/input inputs.tel1 }}

<h3>type: text</h3>
{{> common/input inputs.textfield1 }}

<h3>type: time</h3>
{{> common/input inputs.time1 }}

<h3>type: url</h3>
{{> common/input inputs.url1 }}

<h3>type: week</h3>
{{> common/input inputs.week1 }}

<h2>others</h2>

<h3>select</h3>
{{> common/select dropdowns.dropdown1 }}

<h3>textarea</h3>
{{> common/textarea textareas.textarea1 }}

{{> common/input inputs.submit }}
{{> common/input inputs.reset }}

</form>