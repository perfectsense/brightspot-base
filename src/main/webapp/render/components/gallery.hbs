<div class="bsp-carousel-gallery-wrapper">

	{{#if galleryTitle}}
		<h2 class="bsp-carousel-gallery-header">
			{{#if galleryTitleType}}
				<span>{{galleryTitleType}}:</span>
			{{/if}}
			{{galleryTitle}}
		</h2>
	{{/if}}

	<div data-bsp-carousel-gallery>
		{{#gallerySlides}}
			<div class="bsp-carousel-gallery-slide">
				<img alt="" src="{{slideImage}}" />
				{{#if slideTitle}}
					<h3 class="bsp-carousel-gallery-slide-title">{{slideTitle}}</h3>
				{{/if}}
				{{#if slideDescription}}
					<div class="bsp-carousel-gallery-slide-description">{{slideDescription}}</div>
				{{/if}}
			</div>
		{{/gallerySlides}}
	</div>

	<div class="bsp-carousel-gallery-footer">	

		<div class="bsp-carousel-gallery-footer-thumbnails-link">
			<a href="">Thumbnails</a>
		</div>

		<!--
		<div class="bsp-sharing" data-bsp-share data-bsp-share-options='{"iconClass":"icon", "serviceProps":{"facebook":{"appId":"645138725541385"}}}'>  
		    <div class="bsp-facebook-share"></div>   
		    <div class="bsp-twitter-share"></div>    
		    <div class="bsp-google-share"></div> 
		    <div class="bsp-pinterest-share"></div>  
		    <div class="bsp-linkedin-share"></div>   
		</div>
		-->

		{{#if relatedLinks}}
		<div class="bsp-carousel-gallery-footer-links">
			{{#if relatedLinksTitle}}
				<h4 class="bsp-carousel-gallery-related-links-header">{{relatedLinksTitle}}:</h4>
			{{/if}}
			<ul>
				{{#relatedLinks}}
					<li><a href="{{href}}">{{text}}</a></li>
				{{/relatedLinks}}			
			</ul>
		</div>
		{{/if}}

	</div>

</div>