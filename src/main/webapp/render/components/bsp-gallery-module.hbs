<div class="bsp-component bsp-gallery-module-component{{#if options.modifierClass}} {{options.modifierClass}}{{/if}}">
	{{#if galleryTitle}}
		<h3 class="bsp-component-title">{{render galleryTitle}}</h3>
	{{/if}}

	<div class="bsp-component-content">

		<div class="gallery-module gallery-module-{{#if options.theme}}{{options.theme}}{{/if}}" data-bsp-carousel data-bsp-carousel-options='{
			"theme" : "{{#if options.theme}}{{options.theme}}{{/if}}",

            {{#if options.dynamicSlideLoad}}"dynamicSlideLoad" : true,{{/if}}

			"themeConfig" : {
	            "arrows" : {{#if options.arrows}}{{options.arrows}}{{else}}true{{/if}},
	            "dots" : {{#if options.horizontalSlides}}false{{else}}true{{/if}}

	            {{#if options.horizontalSlides}},

                    {{#if options.slidesToScroll}}
                        "slidesToScroll" : {{options.slidesToScroll.medium}},
                    {{else}}
                        "slidesToScroll" : 5,
                    {{/if}}

					{{#if options.slidesToShow}}
					"slidesToShow" : {{options.slidesToShow.medium}},

					"responsive": [
				    {
				      "breakpoint": 768,
				      "settings": {
				        "slidesToShow": {{options.slidesToShow.small}},
                        {{#if options.slidesToScroll}}
                            "slidesToScroll" : {{options.slidesToScroll.small}}
                        {{else}}
                            "slidesToScroll" : 2
                        {{/if}}
				      }
				    }]
				    {{else}}

                    "slidesToShow" : 5,
					"responsive": [
				    {
				      "breakpoint": 768,
				      "settings": {
				        "slidesToShow": 2,
                        {{#if options.slidesToScroll}}
                            "slidesToScroll" : {{options.slidesToScroll.small}}
                        {{else}}
                            "slidesToScroll" : 2
                        {{/if}}
				      }
				    }]
				    {{/if}}
			    {{/if}}
			    }
			}'>

			{{#each gallerySlides}}
				<div class="bsp-carousel-slide">
					{{render this}}
				</div>
			{{/each}}
		</div>

	</div>

	{{#with cta}}
		<div class="bsp-component-cta {{#if options.location}}bsp-component-cta-{{options.location}}{{/if}}">
			{{render content}}
		</div>
	{{/with}}
</div>
