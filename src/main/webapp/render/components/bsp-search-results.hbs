<div id="bsp-search-results-wrapper">

    <div class="bsp-search-results" data-bsp-ajax-links>

    	<h1 class="bsp-search-results-heading">
    		{{#each heading}}
    			{{#if className}}<span class="{{className}}">{{/if}}{{text}}{{#if className}}</span>{{/if}}
    		{{/each}}
    	</h1>

    	<form class="bsp-search-results-form" action="search-results-ajax-1.html" data-ajax-link-target="#bsp-search-results-wrapper">
    		{{#with searchForm}}

    			{{#with searchInput}}
    				{{render this}}
    			{{/with}}

    			<button class="bsp-search-results-submit" type="submit"><i class="icon icon-search"><span class="sr-only">Go</span></i></button>

    		{{/with}}


        	{{#with searchSort}}
        	<div class="bsp-search-results-sort">
        		{{render this}}
        	</div>
        	{{/with}}

        	{{#with searchFilter}}
        	<div class="bsp-search-results-filter">
        		{{#with heading}}
        			{{render this}}
        		{{/with}}

        		<div class="bsp-search-results-filters">
        			{{#each checkboxes}}
        				{{render this}}
        			{{/each}}
        		</div>
        	</div>
        	{{/with}}
        </form>

    	<div class="bsp-search-results-content">
    		{{#each searchResults}}
    			{{render this}}
    		{{/each}}
    	</div>

    	<div class="bsp-search-pagination">
    		{{#with pagination}}
    			{{render this}}
    		{{/with}}
    	</div>

    </div>

</div>
