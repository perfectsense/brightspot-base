<div class="bsp-site-footer">

	<div class="bsp-container">

				<div class="bsp-row">

					<div class="bsp-column-third">

						{{#with firstCol}}
						    <section class="bsp-footer-list">
					        	<h5 class="bsp-list-heading">
 									{{#with this}}
                                        {{heading}}
                                    {{/with}}
					        	</h5>

						        <ul class="bsp-unstyled-list">
							        {{#each this.listItems}}
							            <li>
							                 {{render this}}
							            </li>
							        {{/each}}
						        </ul>
						    </section>
						{{/with}}

					</div>

					<div class="bsp-column-third">

						{{#with secondCol}}
						    <section class="bsp-footer-list">
					        	<h5 class="bsp-list-heading">
									{{#with this}}
                                        {{heading}}
                                    {{/with}}
					        	</h5>

						        <ul class="bsp-unstyled-list">
							        {{#each this.listItems}}
							            <li>
							                 {{render this}}
							            </li>
							        {{/each}}
						        </ul>
						    </section>
						{{/with}}

					</div>

                    <div class="bsp-column-third">

                        {{#with thirdCol}}

                            {{#if this.sharing}}
                                <div class="bsp-component">

                                    <h5 class="bsp-component-title">{{social}}</h5>

                                    <div class="bsp-component-content">

                                        <ul class="bsp-share-links">
                                            {{#each sharing.links}}
                                                <li class="bsp-{{icon}}-share">{{render this cssClass="bsp-share-link"}}</li>
                                            {{/each}}
                                        </ul>

                                    </div>

                                </div>
                            {{/if}}

                            {{#with newsletter}}
                                {{render this}}
                            {{/with}}
                        {{/with}}

                    </div>

				</div>

				<div class="bsp-site-copyright">
					<div class="bsp-disclaimer">
						{{disclaimer}}
					</div>
					<div class="bsp-logo">
						<span>
						{{prefix}}&nbsp;
						</span>
						{{#with logo}}
							{{render this}}
						{{/with}}

					</div>
				</div>

	</div>
</div>
