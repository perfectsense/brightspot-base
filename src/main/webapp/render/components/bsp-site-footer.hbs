<div class="bsp-site-footer">

	<div class="bsp-container">
		<div class="bsp-row">

			<div class="bsp-column-two-thirds">

				<div class="bsp-row">

					<div class="bsp-column-half">

						{{#with first-col}}
						    <section>
					        	<h5 class="bsp-list-heading">{{heading}}</h5>
					        	
						        <ul class="bsp-unstyled-list">
							        {{#each listItems}}
							            <li>
							            {{#with link}}
							                 {{render this}}
							            {{/with}}
							            </li>
							        {{/each}}
						        </ul>
						    </section>
						{{/with}}

					</div>

					<div class="bsp-column-half">

						{{#with second-col}}
						    <section>
					        	<h5 class="bsp-list-heading">{{heading}}</h5>
					        	
						        <ul class="bsp-unstyled-list">
							        {{#each listItems}}
							            <li>
							            {{#with link}}
							                 {{render this}}
							            {{/with}}
							            </li>
							        {{/each}}
						        </ul>
						    </section>
						{{/with}}

					</div>

				</div>

				<div class="bsp-site-copyright">
					{{disclaimer}}
				</div>

			</div>

			<div class="bsp-column-third">

				{{#with third-col}}

					{{#if sharing}}
						<div class="bsp-component">

							<h5 class="bsp-component-title">{{social}}</h5>

							<div class="bsp-component-content">
								
								<ul class="bsp-share-links">
									{{#each sharing.links}}
										<li class="bsp-{{icon}}-share">{{> common/link class="bsp-share-link"}}</li>
									{{/each}}
								</ul>
								
							</div>

						</div>
					{{/if}}

					{{#if newsletter}}
						<div class="bsp-component">

							<h5 class="bsp-component-title">{{newsletter}}</h5>

							<div class="bsp-component-content">
								<span>{{newsletter-description}}</span>
							
								<form action="" data-bsp-form>
									<div class="input-container">
										{{#each inputs}}
											<div class="input-content">{{render this}}</div>
										{{/each}}
									</div>
								</form>

							</div>

						</div>
					{{/if}}
				{{/with}}

			</div>
			
		</div>

	</div>
</div>