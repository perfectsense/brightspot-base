<div class="bsp-site-footer">

	<div class="bsp-container">
		<div class="bsp-row">

			<div class="bsp-column-two-thirds">

				<div class="bsp-row">

					<div class="bsp-column-half">

						{{#with firstCol}}
						    <section>
					        	<h5 class="bsp-list-heading">{{this.heading}}</h5>
					        	
						        <ul class="bsp-unstyled-list">
							        {{#each this.listItems}}
							            <li>
							            {{#with this.link}}
							                 {{render this}}
							            {{/with}}
							            </li>
							        {{/each}}
						        </ul>
						    </section>
						{{/with}}

					</div>

					<div class="bsp-column-half">

						{{#with secondCol}}
						    <section>
					        	<h5 class="bsp-list-heading">{{this.heading}}</h5>
					        	
						        <ul class="bsp-unstyled-list">
							        {{#each this.listItems}}
							            <li>
							            {{#with this.link}}
							                 {{render this}}
							            {{/with}}
							            </li>
							        {{/each}}
						        </ul>
						    </section>
						{{/with}}

					</div>

				</div>

				<div class="bsp-site-copyright">
					<div class="bsp-row">
						{{disclaimer}}
					</div>
					<div class="bsp-row">
						<span>{{prefix}}&nbsp;</span>
						<span>
							{{#with logo}}
								{{render this}}
							{{/with}}
						</span>
					</div>
				</div>

			</div>

			<div class="bsp-column-third">

				{{#with thirdCol}}

					{{#if this.sharing}}
						<div class="bsp-component">

							<h5 class="bsp-component-title">{{social}}</h5>

							<div class="bsp-component-content">
								
								<ul class="bsp-share-links">
									{{#each sharing.links}}
										<li class="bsp-{{icon}}-share">{{> common/link linkClass="bsp-share-link"}}</li>
									{{/each}}
								</ul>
								
							</div>

						</div>
					{{/if}}

					{{#if newsletter}}
						<div class="bsp-component">

							<h5 class="bsp-component-title">{{newsletter}}</h5>

							<div class="bsp-component-content">
								<span>{{newsletterDescription}}</span>
							
								<form action="" data-bsp-form>
									<div class="input-container">
										{{#each inputs}}
											<div class="input-content">{{render this}}</div>
										{{/each}}
									</div>
								</form>

							</div>

						</div>
					{{/if}}
				{{/with}}

			</div>
			
		</div>

	</div>
</div>