<div class="bsp-component">
	{{#if galleryTitle}}
		<h3 class="bsp-component-title">{{render galleryTitle}}</h1>
	{{/if}}

	<div class="bsp-component-content">

		<div class="gallery-module {{#if options.textNav}}gallery-module-nav{{else}}gallery-module-thumbs{{/if}}" data-bsp-carousel-thumbnav data-bsp-carousel-thumbnav-options='{ "stage" : { "theme" : "carousel-dots" , "themeConfig" : { } }, "nav": { "themeConfig" : { "slidesToShow" : 4, "centerMode" : false } } }'>
			<div class="bsp-carousel-stage">

				{{#gallerySlides}}
					<div class="bsp-carousel-slide">
						
						{{render this}}

						{{#if navText}}
							<div class="bsp-carousel-slide-nav-text">{{navText}}</div>
						{{/if}}
					</div>
				{{/gallerySlides}}

			</div>
			<div class="bsp-carousel-nav">

				{{#galleryNavItems}}
					<div class="bsp-carousel-slide">
						{{#with navImage}}
							{{render this}}
						{{/with}}
						{{#if navText}}
							<p>{{navText}}</p>
						{{/if}}
					</div>
				{{/galleryNavItems}}
				
			</div>
		</div>

	</div>

	{{#with cta}}
		<div class="bsp-component-cta {{#if options.location}}bsp-component-cta-{{options.location}}{{/if}}">
			{{render content}}
		</div>	
	{{/with}}	
</div>