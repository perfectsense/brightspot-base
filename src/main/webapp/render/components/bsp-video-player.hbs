<div class="bsp-component bsp-video-player-component{{#if options.modifierClass}} {{options.modifierClass}}{{/if}}">

    <div class="bsp-component-content">
        <div class="bsp-video-player">

            {{#if video.native}}
                <video class="bsp-video-player-native" controls>
                    <source src="{{video.src}}.mp4" type="video/mp4">
                    <source src="{{video.src}}.ogg" type="video/ogg">
                </video>
            {{/if}}

            {{#if video.youtube}}
                <div class="bsp-video-player-iframe-wrapper">
                    <iframe src="{{video.src}}" frameborder="0" allowfullscreen></iframe>
                </div>
            {{/if}}

            {{#if video.vimeo}}
                <div class="bsp-video-player-iframe-wrapper">
                    <iframe src="{{video.src}}" frameborder="0" allowfullscreen></iframe>
                </div>
            {{/if}}

            {{#if video.brightcove}}
                <div class="bsp-video-player-brightcove">

                    <script type="text/javascript" src="http://admin.brightcove.com/js/BrightcoveExperiences.js"></script>

                    <div class="bsp-video-player-object-wrapper">
                        <object type="application/x-shockwave-flash" data="http://c.brightcove.com/services/viewer/federated_f9?&amp;flashID=video{{video.id}}&amp;bgcolor={{video.bgHex}}&amp;playerID={{video.playerId}}&amp;playerKey={{video.playerKey}}&amp;isVid=true&amp;dynamicStreaming=true&amp;%40videoPlayer={{video.id}}&amp;autoStart=&amp;debuggerID=&amp;wmode=transparent" id="video{{video.id}}" class="BrightcoveExperience" seamlesstabbing="undefined">
                            <param name="allowScriptAccess" value="always" />
                            <param name="allowFullScreen" value="true" />
                            <param name="seamlessTabbing" value="false" />
                            <param name="swliveconnect" value="true" />
                            <param name="wmode" value="transparent" />
                            <param name="quality" value="high" />
                            <param name="bgcolor" value="{{video.bgHex}}" />
                        </object>
                    </div>

                </div>
            {{/if}}

            {{#if video.kaltura}}
                <div class="bsp-video-player-iframe-wrapper">
                    {{#with video}}
                        <iframe src="{{src}}{{#if queryStrings.length}}?{{#each queryStrings}}{{#if @last}}{{#each this}}{{@key}}={{this}}{{/each}}{{else}}{{#each this}}{{@key}}={{this}}&amp;{{/each}}{{/if}}{{/each}}{{/if}}" width="935" height="526" allowfullscreen webkitallowfullscreen mozAllowFullScreen frameborder="0"></iframe>
                        {{!-- <iframe src="http://cdnapi.kaltura.com/p/2034801/sp/203480100/embedIframeJs/uiconf_id/32243031/partner_id/2034801?iframeembed=true&playerId=kaltura_player_1447346666&entry_id=1_6jetw0ob" width="935" height="526" allowfullscreen webkitallowfullscreen mozAllowFullScreen frameborder="0"></iframe> --}}
                    {{/with}}


                </div>
            {{/if}}

            {{#if primaryTag}}
                <div class="bsp-primary-tag">{{render this.primaryTag}}</div>
            {{/if}}

            {{#if title}}
                <h4 class="bsp-video-player-title">{{render this.title}}</h4>
            {{/if}}

            {{#if description}}
                <div class="bsp-video-player-description">{{render this.description}}</div>
            {{/if}}

            {{#if tags}}
                {{ render tags }}
            {{/if}}

            {{#if sharing}}
                <div class="bsp-video-player-sharing">{{render this.sharing}}</div>
            {{/if}}

            {{#if cta}}
                <div class="bsp-component-cta {{#if this.cta.options.location}}cta-{{this.cta.options.location}}{{/if}}">
                    {{render this.cta.content}}
                </div>
            {{/if}}

        </div>
    </div>

</div>
