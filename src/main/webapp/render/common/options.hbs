{{!--
	Allows you to write out an options data attribute.

	Example:
	
	Before
	<div data-bsp-tabber data-bsp-tabber-options='{{> common/options options }}'>

	After
	<div data-bsp-tabber data-bsp-tabber-options='{
		"classActive": "highlight",
		"navPosition": "bottom"
	}'>

	Where options =
	[
		{
			"key": "classActive",
			"value": "highlight"
		},
		{
			"key": "navPosition",
			"value": "bottom"
		}
	]
--}}
{
	{{#each this}}
		{{#if @last}}
			"{{key}}":"{{value}}"
		{{else}}
			"{{key}}":"{{value}}",
		{{/if}}
	{{/each}}
}