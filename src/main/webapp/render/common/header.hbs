<div class="bsp-site-header-wrapper">

	{{#if tophat}}
		<div class="bsp-tophat">
			<ul class="bsp-tophat-links">

				{{#each tophat.links}}

					{{#link}}
						<a href="{{href}}" title="{{title}}" target="{{target}}">
							{{#if image}}
								{{#image}}
									<img src="{{src}}" alt="{{alt}}" width="{{width}}" height="{{height}}" />
								{{/image}}
							{{/if}}
							{{text}}
						</a>
					{{/link}}

				{{/each}}

			</ul>
		</div>
	{{/if}}

	<div class="bsp-site-header" data-bsp-toggle-item>
		
		<div class="bsp-site-logo-centering">
			<h1 class="bsp-site-logo">

				{{#with siteLogo}}
					{{> common/link }}
				{{/with}}

			</h1>
		</div>

		{{#if extraLinks}}
			<div class="bsp-header-extra-links-wrapper">
				<ul class="bsp-header-extra-links">
					{{#each extraLinks}}
						<li><a class="bsp-header-extra-link" href="{{link}}">{{text}}</a></li>
					{{/each}}
				</ul>
			</div>
		{{/if}}

		{{#if sharing}}
			<div class="bsp-share-links-centering">
				<ul class="bsp-share-links">
					{{#if sharing.facebook}}<li class="bsp-facebook-share"><a class="bsp-share-link icon icon-facebook" href="{{sharing.facebook.url}}" target="_blank"></a></li>{{/if}}
				    {{#if sharing.twitter}}<li class="bsp-twitter-share"><a class="bsp-share-link icon icon-twitter" href="{{sharing.twitter.url}}" target="_blank"></a></li>{{/if}}    
				    {{#if sharing.pinterest}}<li class="bsp-pinterest-share"><a class="bsp-share-link icon icon-pinterest" href="{{sharing.pinterest.url}}" target="_blank"></a></li>{{/if}} 
				    {{#if sharing.linkedin}}<li class="bsp-linkedin-share"><a class="bsp-share-link icon icon-linkedin" href="{{sharing.linkedin.url}}" target="_blank"></a></li>{{/if}} 
				</ul>
			</div>
		{{/if}}

		<div class="bsp-site-search-trigger">
			<div class="bsp-site-search toggle-item">
				<form class="bsp-site-search-form">
					<input class="bsp-site-search-input" type="text" />
					<button class="bsp-site-search-submit" type="submit"><i class="icon icon-search"><span class="sr-only">Go</span></i></button>
				</form>
			</div>

			<div class="toggle-trigger">
				<a href="#"><i class="icon icon-search"><span class="sr-only">toggle search form</span></i></a>
			</div>
		</div>

		{{#if extraMenu}}
			<div class="bsp-extra-menu-wrapper">
				<ul class="bsp-extra-menu">
					{{#each extraMenu}}
					<li>
						<a href="{{link}}">{{text}}{{#if subMenu}}<i class="icon"></i>{{/if}}</a>
						{{#if subMenu}}
						<ul class="bsp-extra-menu-submenu">
							{{#each subMenu}}
								<li><a href="{{link}}">{{text}}</a></li>
							{{/each}}
						</ul>
						{{/if}}
					</li>
					{{/each}}
				</ul>
			</div>
		{{/if}}

	</div>

</div>