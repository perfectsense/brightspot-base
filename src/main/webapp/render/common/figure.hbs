<figure class="bsp-img-with-meta">
    {{image}}
    {{#if caption}}
        <figcaption><span class="bsp-img-caption">{{render caption}}{{#if credit}}<figcaption><span class="bsp-img-credit"> ({{credit}})</span></figcaption>{{/if}}</span></figcaption>
    {{else}}
        {{#if credit}}<figcaption><span class="bsp-img-credit">{{credit}}</span></figcaption>{{/if}}
    {{/if}}
</figure>
