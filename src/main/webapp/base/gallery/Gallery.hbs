{{#defineBlock "Gallery"}}

    {{#defineElement "intro"}}
        <div class="{{elementName}}">{{this}}</div>
    {{/defineElement}}

    {{#defineElement "slides" noWith=true}}
        <section class="{{elementName}}">
            {{#each slides}}{{this}}{{/each}}
        </section>
    {{/defineElement}}
    
    {{#defineBlockContainer}}
        <div class="{{blockName}}" data-bsp-gallery-list data-bsp-gallery-list-options="{ {{#if introBackgroundImage}}&quot;introBackgroundImage&quot;:&quot;{{introBackgroundImage}}&quot;{{/if}} }" {{extraAttributes}}>

            {{#defineBlockBody}}
                {{element "intro"}}
                {{element "slides"}}
            {{/defineBlockBody}}
            
        </div>
    {{/defineBlockContainer}}
{{/defineBlock}}
