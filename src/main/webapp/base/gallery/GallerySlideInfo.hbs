{{#defineBlock "GallerySlideInfo"}}

    {{#defineElement "title"}}
        <div class="{{elementName}}">{{this}}</div>
    {{/defineElement}}
    
    {{#defineElement "description"}}
        <div class="{{elementName}}">{{this}}</div>
    {{/defineElement}}
    
    {{#defineElement "attribution"}}
        <div class="{{elementName}}">{{this}}</div>
    {{/defineElement}}
    
    {{#defineBlockContainer}}
        <div class="{{blockName}}" {{extraAttributes}}>

            {{#defineBlockBody}}
                {{element "title"}}
                {{element "description"}}
                {{element "attribution"}}
            {{/defineBlockBody}}
            
        </div>
    {{/defineBlockContainer}}
{{/defineBlock}}
