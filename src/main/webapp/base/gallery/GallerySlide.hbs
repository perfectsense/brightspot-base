{{#defineBlock "GallerySlide"}}

    {{#defineElement "image"}}
        <div class="{{elementName}}">
            <a href="#" title="Increase image size" class="{{elementName}}-zoom">Zoom</a>
            {{this}}
        </div>
    {{/defineElement}}

    {{#defineElement "infoTitle"}}
        <div class="{{elementName}}">{{this}}</div>
    {{/defineElement}}

    {{#defineElement "infoDescription"}}
        <div class="{{elementName}}">{{this}}</div>
    {{/defineElement}}

    {{#defineElement "infoAttribution"}}
        <div class="{{elementName}}">{{this}}</div>
    {{/defineElement}}
    
    {{#defineElement "info" noWith=true}}
        <div class="{{elementName}}">
            {{element "infoTitle"}}
            {{element "infoDescription"}}
            {{element "infoAttribution"}}
        </div>
    {{/defineElement}}
    
    {{#defineBlockContainer}}
        <div class="{{blockName}}" {{extraAttributes}}>

            {{#defineBlockBody}}
                {{element "image"}}
                {{element "info"}}
            {{/defineBlockBody}}
            
        </div>
    {{/defineBlockContainer}}
{{/defineBlock}}
