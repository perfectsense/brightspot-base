{{#defineBlock "Comment"}}
    {{#defineElement "author"}}
        <div class="{{elementName}}">{{this}}</div>
    {{/defineElement}}

    {{#defineElement "time"}}
        <div class="{{elementName}}">{{this}}</div>
    {{/defineElement}}

    {{#defineElement "body"}}
        <div class="{{elementName}}">{{this}}</div>
    {{/defineElement}}

    {{#defineElement "like" noWith=true}}
        {{#if likeButton}}
            <form class="{{elementName}}" method="post" action="{{likeAction}}">
                <button class="{{elementName}}-button">{{likeButton}}</button>
            </form>
        {{/if}}
    {{/defineElement}}

    {{#defineElement "dislike" noWith=true}}
        {{#if dislikeButton}}
            <form class="CommentAction-dislike" method="post" action="{{dislikeAction}}">
                <button class="CommentAction-dislike-button">{{dislikeButton}}</button>
            </form>
        {{/if}}
    {{/defineElement}}

    {{#defineElement "reply" noWith=true}}
        {{#if replyButton}}
            <form class="CommentAction-reply" method="get" action="{{replyAction}}">
                <button class="CommentAction-reply-button">{{replyButton}}</button>
            </form>
        {{/if}}
    {{/defineElement}}

    {{#defineElement "actions" noWith=true}}
        <footer class="{{elementName}}">
            {{element "like"}}
            {{element "dislike"}}
            {{element "reply"}}
        </footer>
    {{/defineElement}}

    {{#defineBlockContainer}}
        <div id="{{id}}"
            class="{{blockName}}"
            data-bsp-community-comment
            {{#if parentId}}data-in-reply-to="{{parentId}}"{{/if}}
            {{#if threadDepth}}data-thread-depth="{{threadDepth}}"{{/if}}
            {{#if isStaff}}data-by-staff{{/if}}
            itemscope itemtype="http://schema.org/Comment"
            {{extraAttributes}}>

            {{#defineBlockBody}}
                {{element "author"}}
                {{element "time"}}
                {{element "body"}}
                {{element "actions"}}
            {{/defineBlockBody}}

        </div>
    {{/defineBlockContainer}}
{{/defineBlock}}
