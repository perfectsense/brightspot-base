{{#defineBlock "CommentEntry"}}
    {{#defineElement "user"}}
        <div class="{{elementName}}">{{this}}</div>
    {{/defineElement}}

    {{#defineElement "title"}}
        <div class="{{elementName}}">{{this}}</div>
    {{/defineElement}}

    {{#defineElement "subtitle"}}
        <div class="{{elementName}}">{{this}}</div>
    {{/defineElement}}

    {{#defineElement "input" noWith="true"}}
        <div class="{{elementName}}">{{input}}</div>
    {{/defineElement}}

    {{#defineElement "validation"}}
        <div class="{{elementName}}">{{this}}</div>
    {{/defineElement}}

    {{#defineElement "submit" noWith=true}}
        <form class="CommentEntryAction-submit" method="post" action="{{submitAction}}">
            <button class="CommentEntryAction-submit-button">{{submitButton}}</button>
        </form>
    {{/defineElement}}

    {{#defineElement "actions" noWith=true}}
        <footer class="{{elementName}}">
            {{element "submit"}}
        </footer>
    {{/defineElement}}

    {{#defineBlockContainer}}
        <div class="{{blockName}}"
            {{#if replaceWithResponse}}data-replace-with-response{{/if}}
            {{extraAttributes}}>
            {{#defineBlockBody}}
                {{element "user"}}
                {{element "title"}}
                {{element "subtitle"}}
                {{element "input"}}
                {{element "validation"}}
                {{element "actions"}}
            {{/defineBlockBody}}
        </div>
    {{/defineBlockContainer}}
{{/defineBlock}}
