<span class="share-links-wrapper">

	<span class="share-links-title">{{render socialTitle}}</span>

	<ul class="share-links{{#if displayOptions.monochrome}} icons-monochrome{{/if}}" data-bsp-share
    	data-bsp-share-options='{
    			"description":"{{description}}",
    			"image":"{{image}}",
    			"title":"{{title}}",
    			"url":"{{url}}",
    			"redirectUrl":"{{redirectUrl}}",
    			"iconClass":"icon",
    			"serviceProps":{
    				"facebook":{"appId":"{{facebookId}}"}
    			},
                "sharingClass"       : "share-link",
                "serviceClassBefore" : ""
    		}'>
		{{#each services}}
				<li class="{{this}}-share"></li>
		{{/each}}
	</ul>
</span>