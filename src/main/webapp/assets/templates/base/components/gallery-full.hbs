<div data-bsp-carousel-gallery data-bsp-carousel-gallery-options='{ "dynamicSlideLoad" : "{{dynamicSlideLoad}}" ,"stage" : { "themeConfig":{ "arrows" : true {{#if displayOptions.disableDeepLinking}},"deepLinking" : false{{/if}} }}}'{{#if displayOptions.modifierClass}} class="gallery-full-component {{displayOptions.modifierClass}}"{{/if}}>

    <div class="gallery-full-wrapper">

        {{#if heading}}
        <div class="gallery-full-header">
            <h2 class="gallery-full-title">
                {{{render heading}}}
            </h2>
            {{#if description}}
                <div class="gallery-full-desc">
                    {{render description}}
                </div>
            {{/if}}
        </div>
        {{/if}}

        <div class="bsp-carousel-gallery">
            <div class="bsp-carousel-stage">
                {{#each slides}}
                    {{render this}}
                {{/each}}
            </div>

            {{#if displayOptions.thumbnails}}
                <div class="bsp-carousel-nav">

                    {{#each slides}}
                        {{render this.thumbnail}}
                    {{/each}}

                </div>
            {{/if}}
        </div>

        <div class="gallery-full-footer">

            {{#if displayOptions.thumbnails}}
            <div class="bsp-carousel-gallery-thumbs">
                <span class="icon icon-th-large" href=""></span>
                <span class="bsp-carousel-gallery-count"></span>
            </div>
            {{else}}
            <div class="bsp-carousel-gallery-count-wrapper">
                <span class="bsp-carousel-gallery-count"></span>
            </div>
            {{/if}}

            <div class="bsp-carousel-gallery-caption-trigger">
                <span class="icon icon-info-circle" href=""></span>
                <span class="captions-visible">Hide Captions</span>
                <span class="captions-hidden">Show Captions</span>
            </div>

            {{#with sharing}}
            <div class="gallery-full-sharing">
                {{render this}}
            </div>
            {{/with}}

            {{#with tags}}
                {{render this}}
            {{/with}}

        </div>

    </div>
</div>
