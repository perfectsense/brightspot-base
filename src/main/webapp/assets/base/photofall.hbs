<div class="photofall Module{{#if displayOptions.modifierClass}} {{displayOptions.modifierClass}}{{/if}}">

    <div class="photofall-head">

        {{#with tags}}
            {{render this}}
        {{/with}}

        <h1 class="article-title">{{title}}</h1>

        {{#if subTitle}}
            <h3 class="article-subtitle">{{subTitle}}</h3>
        {{/if}}

        {{#with metaData}}
            {{render this}}
        {{/with}}

        {{#if sharing}}{{render sharing }}{{/if}}

    </div>

    <div class="photofall-content">
        {{#each photofallBody}}{{this}}{{/each}}
    </div>

    <div class="photofall-items">
        {{#each photofallItems}}{{this}}{{/each}}
    </div>

    {{modalGallery}}

</div>{{!-- photofall --}}
