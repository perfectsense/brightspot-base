<div class="TwoColumn-container{{#if displayOptions.modifierClass}} {{displayOptions.modifierClass}}{{/if}}">

    <div class="TwoColumn-aboveColumns">
        {{#each aboveColumns}}
            {{render this}}
        {{/each}}
    </div>

	<div class="TwoColumn-row">

		<div class="TwoColumn-main">
            {{#each main}}
                <div class="TwoColumn-item">
                    {{render this}}
                </div>
            {{/each}}
		</div>

		<div class="TwoColumn-aside">
            {{#each aside}}
                <div class="TwoColumn-item">
                    {{render this}}
                </div>
            {{/each}}
		</div>

	</div>
</div>
