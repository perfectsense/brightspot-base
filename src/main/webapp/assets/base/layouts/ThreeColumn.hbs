<div class="ThreeColumn-container{{#if displayOptions.modifierClass}} {{displayOptions.modifierClass}}{{/if}}">

    <div class="ThreeColumn-aboveColumns">
        {{#each aboveColumns}}
            {{render this}}
        {{/each}}
    </div>

	<div class="ThreeColumn-row">

		<div class="ThreeColumn-column">
            {{#each first}}
                <div class="ThreeColumn-item">
                    {{render this}}
                </div>
            {{/each}}
		</div>

		<div class="ThreeColumn-column">
            {{#each second}}
                <div class="ThreeColumn-item">
                    {{render this}}
                </div>
            {{/each}}
		</div>

		<div class="ThreeColumn-column">
            {{#each third}}
                <div class="ThreeColumn-item">
                    {{render this}}
                </div>
            {{/each}}
		</div>

	</div>
</div>
