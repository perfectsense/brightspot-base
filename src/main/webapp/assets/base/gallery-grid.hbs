<div class="gallery-grid module{{#if displayOptions.modifierClass}} {{displayOptions.modifierClass}}{{/if}}">
    {{#with heading}}
        <div class="gallery-grid-title">{{render this}}</div>
    {{/with}}

    <div class="gallery-grid-content" data-bsp-toggle-item data-bsp-toggle-item-options='{"toggleItem":".gallery-grid-gallery","toggleTrigger":".gallery-grid-grid"}'>

        <div class="gallery-grid-grid">
            {{#each grid}}
                {{render this}}
            {{/each}}
        </div>

        <div class="gallery-grid-gallery">
            {{#with gallery}}
                {{render this}}
            {{/with}}
        </div>

        {{#with description}}
            <div class="gallery-grid-description">{{render this}}</div>
        {{/with}}

    </div>

     {{#if cta}}
        <div class="gallery-grid-cta {{#if displayOptions.ctaLocation}}cta-{{displayOptions.ctaLocation}}{{/if}}">
            {{#with cta}}
                {{render this}}
            {{/with}}
        </div>
    {{/if}}

</div>