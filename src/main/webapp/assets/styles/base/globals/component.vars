/**
 * We can define component bottom padding on a global level to have consistency
 */
@space-component-bottom: @space-quad;

/**
 * These are the colors for the "inverse" and "secondary" style
 */
@color-component-inverse-background: @color-gray-dark;
@color-component-inverse-text: @color-white;
@color-component-secondary-background: @color-off-white;
